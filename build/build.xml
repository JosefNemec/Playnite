            Properties="OutputPath=bin/$(Configuration); Configuration=$(Configuration); AllowedReferenceRelatedFileExtensions=none;" />
        <MSBuild
            Projects="../source/Plugins/TwitchLibrary/TwitchLibrary.csproj"
            Targets="Build"
            Properties="OutputPath=bin/$(Configuration); Configuration=$(Configuration); AllowedReferenceRelatedFileExtensions=none;" />
