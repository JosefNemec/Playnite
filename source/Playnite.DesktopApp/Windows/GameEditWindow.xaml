                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text=" ! " Foreground="Orange" ToolTip="{DynamicResource LOCGameEditChangeNotif}"
                                   Visibility="{Binding ShowScriptsChangeNotif,Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="{DynamicResource LOCScripts}"
                                   Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=TextBlock}}" />
                    </StackPanel>
                </TabItem.Header>
                <DockPanel Margin="10,5,10,5">
                    <Button Content="{DynamicResource LOCMenuHelpTitle}" DockPanel.Dock="Bottom" MinWidth="80"
                            HorizontalAlignment="Left"
                            Command="{x:Static pcmd:GlobalCommands.NavigateUrlCommand}"
                            CommandParameter="https://playnite.link/docs/{AppBranch}/manual/gameScripts.html" />
                    <Grid DockPanel.Dock="Top" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBox AcceptsReturn="True" Grid.Column="1" Grid.Row="0"
                                 FontFamily="{DynamicResource MonospaceFontFamily}"
                                 HorizontalScrollBarVisibility="Auto"
                                 VerticalScrollBarVisibility="Visible"
                                 Text="{Binding EditingGame.PreScript, UpdateSourceTrigger=PropertyChanged}" />
                        <StackPanel Grid.Column="0" Grid.Row="0">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"
                                          Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                          IsChecked="{Binding UsePreScriptChanges}" />
                                <TextBlock Text="{DynamicResource LOCPreScriptDescription}"
                                           VerticalAlignment="Center" Margin="0,0,10,0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                <CheckBox ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"
                                          Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                          IsChecked="{Binding UsePreGlobalScriptChanges}" />
                                <CheckBox Content="{DynamicResource LOCExecuteGlobalScript}"
                                          IsChecked="{Binding EditingGame.UseGlobalPreScript}" />
                            </StackPanel>
                            <Button Content="{DynamicResource LOCTestScript}" HorizontalAlignment="Left"
                                    Command="{Binding TestScriptCommand}"
                                    CommandParameter="{Binding EditingGame.PreScript}"/>
                        </StackPanel>

                        <TextBox AcceptsReturn="True" Grid.Column="1" Grid.Row="1"
                                 FontFamily="{DynamicResource MonospaceFontFamily}"
                                 HorizontalScrollBarVisibility="Auto"
                                 VerticalScrollBarVisibility="Visible"
                                 Text="{Binding EditingGame.GameStartedScript, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,10,0,10"/>
                        <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,10,10,10">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"
                                      Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                      IsChecked="{Binding UseGameStartedScriptChanges}" />
                                <TextBlock Text="{DynamicResource LOCGameStartedScriptDescription}"
                                           VerticalAlignment="Center" Margin="0,0,10,0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                <CheckBox ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"
                                  Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  IsChecked="{Binding UseGameStartedGlobalScriptChanges}" />
                                <CheckBox Content="{DynamicResource LOCExecuteGlobalScript}"
                                  IsChecked="{Binding EditingGame.UseGlobalGameStartedScript}" />
                            </StackPanel>
                            <Button Content="{DynamicResource LOCTestScript}" HorizontalAlignment="Left"
                                    Command="{Binding TestScriptCommand}"
                                    CommandParameter="{Binding EditingGame.GameStartedScript}"/>
                        </StackPanel>

                        <TextBox AcceptsReturn="True" Grid.Column="1" Grid.Row="2"
                                 FontFamily="{DynamicResource MonospaceFontFamily}"
                             HorizontalScrollBarVisibility="Auto"
                             VerticalScrollBarVisibility="Visible"
                             Text="{Binding EditingGame.PostScript, UpdateSourceTrigger=PropertyChanged}"/>
                        <StackPanel Grid.Column="0" Grid.Row="2">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"
                                      Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                      IsChecked="{Binding UsePostScriptChanges}" />
                                <TextBlock Text="{DynamicResource LOCPostScriptDescription}"
                                           VerticalAlignment="Center" Margin="0,0,10,0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                <CheckBox ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"
                                  Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  IsChecked="{Binding UsePostGlobalScriptChanges}" />
                                <CheckBox Content="{DynamicResource LOCExecuteGlobalScript}"
                                  IsChecked="{Binding EditingGame.UseGlobalPostScript}" />
                            </StackPanel>
                            <Button Content="{DynamicResource LOCTestScript}" HorizontalAlignment="Left"
                                    Command="{Binding TestScriptCommand}"
                                    CommandParameter="{Binding EditingGame.PostScript}"/>
                        </StackPanel>
                    </Grid>
                </DockPanel>
            </TabItem>
        </TabControl>

        <Border Grid.Column="0" Grid.Row="1" BorderThickness="0,1,0,0" BorderBrush="{StaticResource WindowPanelSeparatorBrush}">
            <DockPanel KeyboardNavigation.TabNavigation="Local" LastChildFill="False" Margin="5">
                <Button TabIndex="1" Name="ButtonDownload" Content="{DynamicResource LOCMenuDownloadMetadata}"
                        DockPanel.Dock="Left" Style="{StaticResource BottomButton}"
                        Visibility="{Binding IsSingleGameEdit, Converter={StaticResource BooleanToVisibilityConverter}}"
                        pbeh:LeftClickContextMenuBehavior.Enabled="True">
                    <Button.ContextMenu>
                        <ContextMenu Placement="Top" Width="{Binding PlacementTarget.ActualWidth, RelativeSource={RelativeSource Self}}"
                                     ItemsSource="{Binding MetadataDownloadOptions}">
                            <ContextMenu.Resources>
                                <Style TargetType="MenuItem" BasedOn="{StaticResource {x:Type MenuItem}}">
                                    <Setter Property="Command" Value="{Binding DownloadCommand}" />
                                </Style>
                            </ContextMenu.Resources>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
                <Button TabIndex="3" Name="ButtonCancel" Content="{DynamicResource LOCCancelLabel}" DockPanel.Dock="Right" IsCancel="True"
                        Style="{StaticResource BottomButton}"
                        Command="{Binding CancelCommand}"/>
                <Button TabIndex="2" Name="ButtonOK" Content="{DynamicResource LOCSaveLabel}" DockPanel.Dock="Right" IsDefault="True"
                        Style="{StaticResource BottomButton}"
                        Command="{Binding ConfirmCommand}"/>
            </DockPanel>
        </Border>
    </Grid>
</controls:WindowBase>
