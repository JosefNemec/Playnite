                                    <Button Content="&#xec3e;"
                                            FontFamily="{DynamicResource FontIcoFont}"
                                            ToolTip="{DynamicResource LOCSelectCoverTitle}"
                                            HorizontalAlignment="Left"
                                            Command="{Binding SelectCoverCommand}"/>
