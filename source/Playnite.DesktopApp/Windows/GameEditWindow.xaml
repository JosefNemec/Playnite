<controls:WindowBase x:Class="Playnite.DesktopApp.Windows.GameEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Playnite;assembly=Playnite"
        xmlns:pcon="clr-namespace:Playnite.Converters;assembly=Playnite"
        xmlns:pbeh="clr-namespace:Playnite.Behaviors;assembly=Playnite"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:pm="clr-namespace:Playnite.SDK.Models;assembly=Playnite.SDK"
        xmlns:controls="clr-namespace:Playnite.Controls;assembly=Playnite"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:prism="clr-namespace:Prism.Interactivity;assembly=Prism.Wpf"
        xmlns:pctrls="clr-namespace:Playnite.DesktopApp.Controls"
        xmlns:psdk="clr-namespace:Playnite.SDK;assembly=Playnite.SDK"
        xmlns:pcmd="clr-namespace:Playnite.Commands;assembly=Playnite"
        mc:Ignorable="d"
        d:DesignStyle="{StaticResource WindowDesignStyle}"
        Style="{DynamicResource StandardWindowStyle}"
        Title="{DynamicResource LOCGameEditWindowTitle}"
        Height="720" Width="850"
        WindowStartupLocation="CenterOwner"
        x:Name="mainWindow"
        AutomationProperties.AutomationId="WindowGameEdit">

    <controls:WindowBase.Resources>
        <pcon:ReleaseDateToStringConverter x:Key="ReleaseDateToStringConverter" />
        <pcon:ListToStringConverter x:Key="ListToStringConverter" />
        <pcon:NullableDateToStringConverter x:Key="NullableDateToStringConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <pcon:InvertableBooleanToVisibilityConverter x:Key="InvertableBooleanToVisibilityConverter" />
        <pcon:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <pcon:NegateConverter x:Key="NegateConverter" />
        <pcon:ValueConverterGroup x:Key="EnumCompVisibilityConverterInverted">
            <pcon:EnumToBooleanConverter/>
            <pcon:NegateConverter/>
            <BooleanToVisibilityConverter/>
        </pcon:ValueConverterGroup>
    </controls:WindowBase.Resources>

    <Grid Margin="0,5,0,0">
        <Grid.Resources>
            <p:BindingProxy x:Key="Proxy" Data="{Binding}" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Name="TabControlMain" DockPanel.Dock="Top" Grid.Column="0" Grid.Row="0">
            <TabItem Name="TabGeneral">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text=" ! " Foreground="Orange" ToolTip="{DynamicResource LOCGameEditChangeNotif}"
                                    Visibility="{Binding ShowGeneralChangeNotif,Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="{DynamicResource LOCGeneralLabel}"
                                    Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=TextBlock}}" />
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer>
                    <Grid Grid.Column="0" Grid.Row="0" Margin="10">
                        <Grid.Resources>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}" >
                                <Setter Property="Margin" Value="3" />
                            </Style>
                            <Style TargetType="pctrls:LongNumericBox" BasedOn="{StaticResource {x:Type pctrls:LongNumericBox}}" >
                                <Setter Property="Margin" Value="3" />
                            </Style>
                            <Style TargetType="pctrls:NullIntNumericBox" BasedOn="{StaticResource {x:Type pctrls:NullIntNumericBox}}" >
                                <Setter Property="Margin" Value="3" />
                            </Style>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}" >
                                <Setter Property="Margin" Value="3" />
                            </Style>
                            <Style TargetType="pctrls:DdItemListSelectionBox" BasedOn="{StaticResource {x:Type pctrls:DdItemListSelectionBox}}" >
                                <Setter Property="Margin" Value="3" />
                            </Style>
                            <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}" >
                                <Setter Property="Margin" Value="0,0,0,0" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}" >
                                <Setter Property="Margin" Value="8,0,10,0" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                            <Style TargetType="DatePicker" BasedOn="{StaticResource {x:Type DatePicker}}" >
                                <Setter Property="Margin" Value="3" />
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Name -->
                        <TextBlock Grid.Column="0" Grid.Row="0" Text="{DynamicResource LOCNameLabel}"/>
                        <CheckBox Grid.Column="1" Grid.Row="0" Name="CheckName"
                                    Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    IsChecked="{Binding UseNameChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <TextBox Grid.Column="2" Grid.Row="0" Name="TextName"
                                    Text="{Binding EditingGame.Name, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Sorting Name -->
                        <TextBlock Grid.Column="0" Grid.Row="1" Text="{DynamicResource LOCGameSortingNameTitle}"/>
                        <CheckBox Grid.Column="1" Grid.Row="1" Name="CheckSortingName"
                                    Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    IsChecked="{Binding UseSortingNameChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <TextBox Grid.Column="2" Grid.Row="1" Name="TextSortingName"
                                    Text="{Binding EditingGame.SortingName, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Platform -->
                        <TextBlock Grid.Column="0" Grid.Row="2" Text="{DynamicResource LOCGamePlatformTitle}"/>
                        <CheckBox Grid.Column="1" Grid.Row="2" Name="CheckPlatform"
                                    Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    IsChecked="{Binding UsePlatformChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <DockPanel Grid.Column="2" Grid.Row="2">
                            <Button Content="+" FontWeight="Bold" DockPanel.Dock="Right"
                                    VerticalContentAlignment="Center"
                                    Padding="4,2,4,2" Margin="3"
                                    Command="{Binding AddPlatformCommand}" />
                            <pctrls:DdItemListSelectionBox DockPanel.Dock="Left"
                                                           IsThreeState="{Binding IsMultiGameEdit}"
                                                           ItemsList="{Binding Platforms}" />
                        </DockPanel>

                        <!-- Genres -->
                        <TextBlock Grid.Column="0" Grid.Row="3" Text="{DynamicResource LOCGenresLabel}" />
                        <CheckBox Grid.Column="1" Grid.Row="3" Name="CheckGenres"
                                    Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    IsChecked="{Binding UseGenresChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <DockPanel Grid.Column="2" Grid.Row="3">
                            <Button Content="+" FontWeight="Bold" DockPanel.Dock="Right"
                                    VerticalContentAlignment="Center"
                                    Padding="4,2,4,2" Margin="3"
                                    Command="{Binding AddGenreCommand}" />
                            <pctrls:DdItemListSelectionBox DockPanel.Dock="Left"
                                                   ShowSearchBox="True"     
                                                   IsThreeState="{Binding IsMultiGameEdit}"
                                                   ItemsList="{Binding Genres}" />
                        </DockPanel>

                        <!-- Developers -->
                        <TextBlock Grid.Column="0" Grid.Row="4" Text="{DynamicResource LOCDevelopersLabel}"/>
                        <CheckBox Grid.Column="1" Grid.Row="4" Name="CheckDeveloper"
                                    Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    IsChecked="{Binding UseDeveloperChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <DockPanel Grid.Column="2" Grid.Row="4">
                            <Button Content="+" FontWeight="Bold" DockPanel.Dock="Right"
                                    VerticalContentAlignment="Center"
                                    Padding="4,2,4,2" Margin="3"
                                    Command="{Binding AddDeveloperCommand}" />
                            <pctrls:DdItemListSelectionBox DockPanel.Dock="Left"
                                                   IsThreeState="{Binding IsMultiGameEdit}"
                                                   ItemsList="{Binding Developers}" />
                        </DockPanel>

                        <!-- Publishers -->
                        <TextBlock Grid.Column="0" Grid.Row="5" Text="{DynamicResource LOCPublishersLabel}" />
                        <CheckBox Grid.Column="1" Grid.Row="5" Name="CheckPublisher"
                                    Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    IsChecked="{Binding UsePublisherChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <DockPanel Grid.Column="2" Grid.Row="5">
                            <Button Content="+" FontWeight="Bold" DockPanel.Dock="Right"
                                    VerticalContentAlignment="Center"
                                    Padding="4,2,4,2" Margin="3"
                                    Command="{Binding AddPublisherCommand}" />
                            <pctrls:DdItemListSelectionBox DockPanel.Dock="Left"
                                                   IsThreeState="{Binding IsMultiGameEdit}"
                                                   ItemsList="{Binding Publishers}" />
                        </DockPanel>

                        <!-- Categories -->
                        <TextBlock Grid.Column="0" Grid.Row="6" Text="{DynamicResource LOCCategoriesLabel}" />
                        <CheckBox Grid.Column="1" Grid.Row="6" Name="CheckCategories"
                                    Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    IsChecked="{Binding UseCategoryChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <DockPanel Grid.Column="2" Grid.Row="6">
                            <Button Content="+" FontWeight="Bold" DockPanel.Dock="Right"
                                    VerticalContentAlignment="Center"
                                    Padding="4,2,4,2" Margin="3"
                                    Command="{Binding AddCategoryCommand}" />
                            <pctrls:DdItemListSelectionBox DockPanel.Dock="Left"
                                                   IsThreeState="{Binding IsMultiGameEdit}"
                                                   ItemsList="{Binding Categories}" />
                        </DockPanel>

                        <!-- Features -->
                        <TextBlock Grid.Column="0" Grid.Row="7" Text="{DynamicResource LOCFeaturesLabel}" />
                        <CheckBox Grid.Column="1" Grid.Row="7" Name="CheckFeature"
                                    Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    IsChecked="{Binding UseFeatureChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <DockPanel Grid.Column="2" Grid.Row="7">
                            <Button Content="+" FontWeight="Bold" DockPanel.Dock="Right"
                                    VerticalContentAlignment="Center"
                                    Padding="4,2,4,2" Margin="3"
                                    Command="{Binding AddFeatureCommand}" />
                            <pctrls:DdItemListSelectionBox DockPanel.Dock="Left"
                                                   ShowSearchBox="True"     
                                                   IsThreeState="{Binding IsMultiGameEdit}"
                                                   ItemsList="{Binding Features}" />
                        </DockPanel>

                        <!-- Tags -->
                        <TextBlock Grid.Column="0" Grid.Row="8" Text="{DynamicResource LOCTagsLabel}" />
                        <CheckBox Grid.Column="1" Grid.Row="8" Name="CheckTag"
                                    Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    IsChecked="{Binding UseTagChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <DockPanel Grid.Column="2" Grid.Row="8">
                            <Button Content="+" FontWeight="Bold" DockPanel.Dock="Right"
                                    VerticalContentAlignment="Center"
                                    Padding="4,2,4,2" Margin="3"
                                    Command="{Binding AddTagCommand}" />
                            <pctrls:DdItemListSelectionBox DockPanel.Dock="Left"
                                                   ShowSearchBox="True"        
                                                   IsThreeState="{Binding IsMultiGameEdit}"
                                                   ItemsList="{Binding Tags}" />
                        </DockPanel>

                        <!-- Description -->
                        <TextBlock Grid.Column="0" Grid.Row="9" Text="{DynamicResource LOCGameDescriptionTitle}"
                                   VerticalAlignment="Top" Margin="8,6,10,0"/>
                        <CheckBox Grid.Column="1" Grid.Row="9" Name="CheckDescription"
                                  VerticalAlignment="Top" Margin="0,5,0,0"
                                    Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    IsChecked="{Binding UseDescriptionChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <TextBox Grid.Column="2" Grid.Row="9" Grid.RowSpan="13" Grid.ColumnSpan="6"
                                 FontFamily="{DynamicResource MonospaceFontFamily}"
                                 VerticalAlignment="Stretch" Margin="3,5,3,3"
                                 TextWrapping="Wrap" AcceptsReturn="True" Name="TextDescription"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 Text="{Binding EditingGame.Description, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="{DynamicResource LOCDescriptionHTMLSupportTooltip}"
                                 ToolTipService.Placement="Top" ToolTipService.InitialShowDelay="0"/>

                        <!-- Release Date -->
                        <TextBlock Grid.Column="3" Grid.Row="0" Text="{DynamicResource LOCGameReleaseDateTitle}"/>
                        <CheckBox Grid.Column="4" Grid.Row="0" Name="CheckReleaseDate"
                                    Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    IsChecked="{Binding UseReleaseDateChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <TextBox Grid.Column="5" Grid.Row="0"
                                 ToolTip="{DynamicResource LOCReleaseDateTooltip}"
                                 ToolTipService.Placement="Top" ToolTipService.InitialShowDelay="0">
                            <TextBox.Text>
                                <Binding Path="EditingGame.ReleaseDate"
                                         UpdateSourceTrigger="PropertyChanged" 
                                         ValidatesOnDataErrors="True"
                                         NotifyOnValidationError="True"
                                         Converter="{StaticResource ReleaseDateToStringConverter}">
                                    <Binding.ValidationRules>
                                        <pcon:ReleaseDateFieldValidation />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <!-- Series -->
                        <TextBlock Grid.Column="3" Grid.Row="1" Text="{DynamicResource LOCSeriesLabel}"/>
                        <CheckBox Grid.Column="4" Grid.Row="1"
                                  Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  IsChecked="{Binding UseSeriesChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <DockPanel Grid.Column="5" Grid.Row="1">
                            <Button Content="+" FontWeight="Bold" DockPanel.Dock="Right"
                                    VerticalContentAlignment="Center"
                                    Padding="4,2,4,2" Margin="3"
                                    Command="{Binding AddSeriesCommand}" />
                            <pctrls:DdItemListSelectionBox DockPanel.Dock="Left"
                                                           IsThreeState="{Binding IsMultiGameEdit}"
                                                           ItemsList="{Binding Series}" />
                        </DockPanel>

                        <!-- AgeRating -->
                        <TextBlock Grid.Column="3" Grid.Row="2" Text="{DynamicResource LOCAgeRatingLabel}"/>
                        <CheckBox Grid.Column="4" Grid.Row="2"
                                  Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  IsChecked="{Binding UseAgeRatingChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <DockPanel Grid.Column="5" Grid.Row="2">
                            <Button Content="+" FontWeight="Bold" DockPanel.Dock="Right"
                                    VerticalContentAlignment="Center"
                                    Padding="4,2,4,2" Margin="3"
                                    Command="{Binding AddAgeRatingCommand}" />
                            <pctrls:DdItemListSelectionBox DockPanel.Dock="Left"
                                                           IsThreeState="{Binding IsMultiGameEdit}"
                                                           ItemsList="{Binding AgeRatings}" />
                        </DockPanel>

                        <!-- Region -->
                        <TextBlock Grid.Column="3" Grid.Row="3" Text="{DynamicResource LOCRegionLabel}"/>
                        <CheckBox Grid.Column="4" Grid.Row="3"
                                  Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  IsChecked="{Binding UseRegionChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <DockPanel Grid.Column="5" Grid.Row="3">
                            <Button Content="+" FontWeight="Bold" DockPanel.Dock="Right"
                                    VerticalContentAlignment="Center"
                                    Padding="4,2,4,2" Margin="3"
                                    Command="{Binding AddRegionCommand}" />
                            <pctrls:DdItemListSelectionBox DockPanel.Dock="Left"
                                                           IsThreeState="{Binding IsMultiGameEdit}"
                                                           ItemsList="{Binding Regions}" />
                        </DockPanel>

                        <!-- Source -->
                        <TextBlock Grid.Column="3" Grid.Row="4" Text="{DynamicResource LOCSourceLabel}"/>
                        <CheckBox Grid.Column="4" Grid.Row="4"
                                  Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  IsChecked="{Binding UseSourceChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <DockPanel Grid.Column="5" Grid.Row="4">
                            <Button Content="+" FontWeight="Bold" DockPanel.Dock="Right"
                                    VerticalContentAlignment="Center"
                                    Padding="4,2,4,2" Margin="3"
                                    Command="{Binding AddSourceCommand}" />
                            <ComboBox DockPanel.Dock="Left"
                                  ItemsSource="{Binding Sources}"
                                  SelectedValuePath="Id" DisplayMemberPath="Name"
                                  SelectedValue="{Binding EditingGame.SourceId, UpdateSourceTrigger=PropertyChanged}" />
                        </DockPanel>

                        <!-- Version -->
                        <TextBlock Grid.Column="3" Grid.Row="5" Text="{DynamicResource LOCVersionLabel}"/>
                        <CheckBox Grid.Column="4" Grid.Row="5"
                                  Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  IsChecked="{Binding UseVersionChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <TextBox Grid.Column="5" Grid.Row="5"
                                 Text="{Binding EditingGame.Version, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- UserScore -->
                        <TextBlock Grid.Column="3" Grid.Row="6" Text="{DynamicResource LOCUserScore}"/>
                        <CheckBox Grid.Column="4" Grid.Row="6"
                                  Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  IsChecked="{Binding UseUserScoreChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <TextBox Grid.Column="5" Grid.Row="6" Width="50" HorizontalAlignment="Left"
                                 ToolTip="{DynamicResource LOCDescriptionScoreValues}"
                                 ToolTipService.Placement="Top" ToolTipService.InitialShowDelay="0">
                            <TextBox.Text>
                                <Binding Path="EditingGame.UserScore"
                                         UpdateSourceTrigger="PropertyChanged" 
                                         ValidatesOnDataErrors="True"
                                         NotifyOnValidationError="True"
                                         Converter="{pcon:NullableIntToStringConverter}">
                                    <Binding.ValidationRules>
                                        <pcon:NullableIntFieldValidation MinValue="0" MaxValue="100" />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <!-- CriticScore -->
                        <TextBlock Grid.Column="3" Grid.Row="7" Text="{DynamicResource LOCCriticScore}"/>
                        <CheckBox Grid.Column="4" Grid.Row="7"
                                  Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  IsChecked="{Binding UseCriticScoreChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <TextBox Grid.Column="5" Grid.Row="7" Width="50" HorizontalAlignment="Left"
                                 ToolTip="{DynamicResource LOCDescriptionScoreValues}"
                                 ToolTipService.Placement="Top" ToolTipService.InitialShowDelay="0">
                            <TextBox.Text>
                                <Binding Path="EditingGame.CriticScore"
                                         UpdateSourceTrigger="PropertyChanged" 
                                         ValidatesOnDataErrors="True"
                                         NotifyOnValidationError="True"
                                         Converter="{pcon:NullableIntToStringConverter}">
                                    <Binding.ValidationRules>
                                        <pcon:NullableIntFieldValidation MinValue="0" MaxValue="100" />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <!-- CommunityScore -->
                        <TextBlock Grid.Column="3" Grid.Row="8" Text="{DynamicResource LOCCommunityScore}"/>
                        <CheckBox Grid.Column="4" Grid.Row="8"
                                  Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  IsChecked="{Binding UseCommunityScoreChanges}"
                                  ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                        <TextBox Grid.Column="5" Grid.Row="8" Width="50" HorizontalAlignment="Left"
                                 ToolTip="{DynamicResource LOCDescriptionScoreValues}"
                                 ToolTipService.Placement="Top" ToolTipService.InitialShowDelay="0">
                            <TextBox.Text>
                                <Binding Path="EditingGame.CommunityScore"
                                         UpdateSourceTrigger="PropertyChanged" 
                                         ValidatesOnDataErrors="True"
                                         NotifyOnValidationError="True"
                                         Converter="{pcon:NullableIntToStringConverter}">
                                    <Binding.ValidationRules>
                                        <pcon:NullableIntFieldValidation MinValue="0" MaxValue="100" />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text=" ! " Foreground="Orange" ToolTip="{DynamicResource LOCGameEditChangeNotif}"
                                    Visibility="{Binding ShowAdvancedChangeNotif,Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="{DynamicResource LOCAdvanced}"
                                   Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=TextBlock}}" />
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="10">
                    <Grid.Resources>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}" >
                            <Setter Property="Margin" Value="3" />
                        </Style>
                        <Style TargetType="pctrls:LongNumericBox" BasedOn="{StaticResource {x:Type pctrls:LongNumericBox}}" >
                            <Setter Property="Margin" Value="3" />
                        </Style>
                        <Style TargetType="pctrls:UlongNumericBox" BasedOn="{StaticResource {x:Type pctrls:UlongNumericBox}}" >
                            <Setter Property="Margin" Value="3" />
                        </Style>
                        <Style TargetType="pctrls:NullIntNumericBox" BasedOn="{StaticResource {x:Type pctrls:NullIntNumericBox}}" >
                            <Setter Property="Margin" Value="3" />
                        </Style>
                        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}" >
                            <Setter Property="Margin" Value="3" />
                        </Style>
                        <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}" >
                            <Setter Property="Margin" Value="0,0,0,0" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}" >
                            <Setter Property="Margin" Value="8,0,10,0" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                        <Style TargetType="DatePicker" BasedOn="{StaticResource {x:Type DatePicker}}" >
                            <Setter Property="Margin" Value="3" />
                        </Style>    
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Last Played -->
                    <TextBlock Grid.Column="1" Grid.Row="0" Text="{DynamicResource LOCLastPlayedLabel}"/>
                    <CheckBox Grid.Column="0" Grid.Row="0"
                                Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                IsChecked="{Binding UseLastActivityChanges}"
                              ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                    <DatePicker Grid.Column="2" Grid.Row="0"
                                SelectedDate="{Binding EditingGame.LastActivity}"/>

                    <!-- PlayTime -->
                    <TextBlock Grid.Column="1" Grid.Row="1" Text="{DynamicResource LOCTimePlayed}"/>
                    <CheckBox Grid.Column="0" Grid.Row="1"
                              Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                              IsChecked="{Binding UsePlaytimeChanges}"
                              ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                    <DockPanel Grid.Column="2" Grid.Row="1">
                        <TextBlock Text="{Binding EditingGame.Playtime, Converter={pcon:PlayTimeToStringConverter}}"
                                   DockPanel.Dock="Right" />
                        <TextBox ToolTip="{DynamicResource LOCDescriptionPlaytimeSeconds}"
                                 ToolTipService.Placement="Top" ToolTipService.InitialShowDelay="0"
                                 DockPanel.Dock="Left">
                            <TextBox.Text>
                                <Binding Path="EditingGame.Playtime"
                                         UpdateSourceTrigger="PropertyChanged" 
                                         ValidatesOnDataErrors="True"
                                         NotifyOnValidationError="True"
                                         Converter="{pcon:UlongToStringConverter}">
                                    <Binding.ValidationRules>
                                        <pcon:UlongFieldValidation />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </DockPanel>

                    <!-- PlayCount -->
                    <TextBlock Grid.Column="1" Grid.Row="2" Text="{DynamicResource LOCPlayCountLabel}"/>
                    <CheckBox Grid.Column="0" Grid.Row="2"
                              Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                              IsChecked="{Binding UsePlayCountChanges}"
                              ToolTip="{DynamicResource LOCGameEditChangeSaveTooltip}"/>
                    <TextBox Grid.Column="2" Grid.Row="2">
                        <TextBox.Text>
                            <Binding Path="EditingGame.PlayCount"
                                    UpdateSourceTrigger="PropertyChanged" 
                                    ValidatesOnDataErrors="True"
                                    NotifyOnValidationError="True"
                                    Converter="{pcon:UlongToStringConverter}">
                                <Binding.ValidationRules>
                                    <pcon:UlongFieldValidation />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>

                    <!-- CompletionStatus -->
