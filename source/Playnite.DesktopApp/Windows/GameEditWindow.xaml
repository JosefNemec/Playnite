                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
                                    <Button Content="&#xec3e;"
                                            FontFamily="{DynamicResource FontIcoFont}"
                                            ToolTip="{DynamicResource LOCSelectBackgroundTitle}"
                                            HorizontalAlignment="Left"
                                            Command="{Binding SelectBackgroundCommand}"/>
                                    <Button ToolTip="{DynamicResource LOCSelectUrlTitle}" Margin="5,0,0,0"
                                            Content="&#xef71;"
                                            FontFamily="{DynamicResource FontIcoFont}"
                                            Command="{Binding SetBackgroundUrlCommand}" />
                                    <Button ToolTip="{DynamicResource LOCRemoveLabel}" Margin="5,0,0,0"
                                            Content="&#xec53;"
                                            FontFamily="{DynamicResource FontIcoFont}"
                                            Command="{Binding RemoveBackgroundCommand}" />
                                    <Button Content="G" Margin="5,0,0,0"
                                            ToolTip="Google Images"
                                            Command="{Binding SelectGoogleBackgroundCommand}" />
                                </StackPanel>
                                <DockPanel DockPanel.Dock="Top" Margin="5,5,0,5"
                                       Visibility="{Binding ShowBackgroundUrl, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="{DynamicResource LOCImageURL}" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                    <TextBox IsReadOnly="True" DockPanel.Dock="Left" Margin="5,0,0,0"
                                         Text="{Binding EditingGame.BackgroundImage}" />
                                </DockPanel>
                                <TextBlock Text="{Binding BackgroundMetadata}" DockPanel.Dock="Top" Margin="5,0,0,0"
                                           ToolTipService.InitialShowDelay="0" HorizontalAlignment="Left">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsBackgroundTooLage}" Value="True">
                                                    <Setter Property="Foreground" Value="OrangeRed" />
                                                    <Setter Property="ToolTip" Value="{StaticResource LOCLargeMediaWarningTooltip}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
