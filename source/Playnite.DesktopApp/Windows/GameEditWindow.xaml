                                        <pctrls:PathSelectionBox Text="{Binding Path}" Grid.Column="1" Grid.Row="0" Margin="5"
                                                                 VerticalAlignment="Stretch" VerticalContentAlignment="Center"
                                                                 ShowFileSelector="True"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="2" Grid.Row="0" Margin="5">
                                            <Button FontFamily="Marlett" Content="5" Margin="0,0,5,0"
                                                    Command="{Binding Data.MoveUpRomCommand, Source={StaticResource Proxy}}"
                                                    CommandParameter="{Binding}"/>
                                            <Button FontFamily="Marlett" Content="6" Margin="0,0,5,0"
                                                    Command="{Binding Data.MoveDownRomCommand, Source={StaticResource Proxy}}"
                                                    CommandParameter="{Binding}"/>
                                            <Button FontFamily="Marlett" Content="r"
                                                    Command="{Binding Data.RemoveRomCommand, Source={StaticResource Proxy}}"
                                                    CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>                
            </TabItem>

