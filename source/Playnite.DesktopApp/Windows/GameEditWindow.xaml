                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <TextBox Text="{Binding Name}" Grid.Column="0" Grid.Row="0" Margin="5"
                                                    VerticalAlignment="Stretch" VerticalContentAlignment="Center" />
