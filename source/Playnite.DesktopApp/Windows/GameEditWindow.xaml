                                    <i:EventTrigger EventName="Drop" >
                                        <prism:InvokeCommandAction Command="{Binding DropIconCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </DockPanel>
                        </GroupBox>
                        <GroupBox Grid.Column="0" Grid.Row="1" Header="{DynamicResource LOCGameCoverImageTitle}" Margin="0,5,0,0">
