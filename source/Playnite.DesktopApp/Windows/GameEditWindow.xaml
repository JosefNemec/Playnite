                                   Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=TextBlock}}" />
                    </StackPanel>
                </TabItem.Header>
                <DockPanel>
                    <Button Content="{DynamicResource LOCMenuHelpTitle}" DockPanel.Dock="Bottom" MinWidth="80"
                            Command="{x:Static pcmd:GlobalCommands.NavigateUrlCommand}" Margin="10,0,0,5"
                            HorizontalAlignment="Left"
                            CommandParameter="https://playnite.link/docs/{AppBranch}/manual/gameActions.html" />
                    
                    <TextBlock Visibility="{Binding IsMultiGameEdit,Converter={StaticResource BooleanToVisibilityConverter}}"
                        Text="{DynamicResource LOCMultiEditOverwriteWarning}" Foreground="{DynamicResource WarningBrush}"
                        DockPanel.Dock="Top" Margin="10,10,10,0" />

                    <StackPanel Orientation="Horizontal" Margin="10,5,10,5" DockPanel.Dock="Top"
                            Visibility="{Binding ShowIncludeLibraryPluginAction, Converter={StaticResource BooleanToVisibilityConverter}}">
