                                            Content="&#xef71;"
                                            FontFamily="{DynamicResource FontIcoFont}"
                                            Command="{Binding SetCoverUrlCommand}" />
                                    <Button ToolTip="{DynamicResource LOCRemoveLabel}" Margin="5,0,0,0"
                                            Content="&#xec53;"
                                            FontFamily="{DynamicResource FontIcoFont}"
                                            Command="{Binding RemoveImageCommand}" />
                                    <Button Content="G" Margin="5,0,0,0"
                                            ToolTip="Google Images"
                                            Command="{Binding SelectGoogleCoverCommand}" />
                                </StackPanel>
                                <TextBlock Text="{Binding CoverMetadata}" DockPanel.Dock="Top" Margin="5,0,0,0"
                                           ToolTipService.InitialShowDelay="0" HorizontalAlignment="Left">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsCoverTooLage}" Value="True">
                                                    <Setter Property="Foreground" Value="OrangeRed" />
                                                    <Setter Property="ToolTip" Value="{StaticResource LOCLargeMediaWarningTooltip}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <Image Source="{Binding CoverImageObject, Mode=OneWay}"
                                       Stretch="Uniform" StretchDirection="DownOnly" RenderOptions.BitmapScalingMode="Fant" Name="ImageImage"
                                       DockPanel.Dock="Top"/>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Drop" >
                                        <prism:InvokeCommandAction Command="{Binding DropCoverCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </DockPanel>
                        </GroupBox>
                        <GroupBox Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
                              Header="{DynamicResource LOCGameBackgroundTitle}" Margin="5,0,0,0">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox Name="CheckImage" VerticalAlignment="Center"
                                              Visibility="{Binding Data.ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}, Source={StaticResource Proxy}}"
                                              IsChecked="{Binding Data.UseBackgroundChanges, Source={StaticResource Proxy}}"
