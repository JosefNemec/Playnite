                                        ItemsSource="{Binding EditingGame.Roms}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="-5,0,-5,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" MinWidth="200" SharedSizeGroup="A" />
