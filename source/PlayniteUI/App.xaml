<Application x:Class="PlayniteUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:PlayniteUI"
             Exit="Application_Exit"
             Startup="Application_Startup" ShutdownMode="OnExplicitShutdown"
             Activated="Application_Activated" Deactivated="Application_Deactivated">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Generic.xaml"/>
                <ResourceDictionary Source="Skins/Classic/Classic.xaml"/>
                <ResourceDictionary Source="Skins/Classic/Classic.Default.xaml"/>
                <ResourceDictionary Source="SkinsFullScreen/Playnite/Playnite.xaml"/>
                <ResourceDictionary Source="SkinsFullScreen/Playnite/Playnite.Default.xaml"/>
                <ResourceDictionary Source="Localization/english.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <sys:Boolean x:Key="AsyncImagesEnabled">True</sys:Boolean>
        </ResourceDictionary>
    </Application.Resources>
</Application>
