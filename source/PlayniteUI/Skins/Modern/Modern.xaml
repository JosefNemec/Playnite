                                </Label.Style>
                            </Label>
                            <pc:SearchBox x:Name="TextFilterRegion" Text="{Binding AppSettings.FilterSettings.Region, Delay=500, Mode=TwoWay}" Style="{StaticResource FilterTextBox}"/>

                            <Label Content="{DynamicResource SourceLabel}">
                                <Label.Style>
                                    <Style TargetType="Label" BasedOn="{StaticResource FilterLabel}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, TargetNullValue='', ElementName=TextFilterSource}" Value="">
                                                <Setter Property="Opacity" Value="0.6"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>
                            <pc:SearchBox x:Name="TextFilterSource" Text="{Binding AppSettings.FilterSettings.Source, Delay=500, Mode=TwoWay}" Style="{StaticResource FilterTextBox}"/>

                            <Label Content="{DynamicResource AgeRatingLabel}">
                                <Label.Style>
                                    <Style TargetType="Label" BasedOn="{StaticResource FilterLabel}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, TargetNullValue='', ElementName=TextFilterAgeRating}" Value="">
                                                <Setter Property="Opacity" Value="0.6"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>
                            <pc:SearchBox x:Name="TextFilterAgeRating" Text="{Binding AppSettings.FilterSettings.AgeRating, Delay=500, Mode=TwoWay}" Style="{StaticResource FilterTextBox}"/>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>                
            </Border>

            <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="2"
                    VerticalAlignment="Top" Background="#33000000" Height="38">
                <DockPanel>
                    <Button DockPanel.Dock="Left" Command="{Binding OpenMainMenuCommand}"
                            HorizontalContentAlignment="Left" BorderThickness="0" Background="Transparent">                    
                        <Border DockPanel.Dock="Left" Background="Transparent"
                                Cursor="Hand" Margin="10,0,5,0" WindowChrome.IsHitTestVisibleInChrome="True">                           
                            <TextBlock Text="☰" VerticalAlignment="Center" FontWeight="Bold" Opacity="0.9"
                                        FontSize="20" Foreground="{StaticResource TextBrush}" />
                        </Border>
                    </Button>

                    <ContentControl Template="{StaticResource NotificationIcon}" Margin="0,0,130,0"
                                    HorizontalAlignment="Right" DockPanel.Dock="Right"/>

                    <ContentControl Template="{StaticResource ProgressView}" Margin="290,0,30,0"
                                    HorizontalAlignment="Stretch" DockPanel.Dock="Left" />
                </DockPanel>
            </Border>

            <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="2"
                    Visibility="{Binding MainMenuOpened, Converter={StaticResource BooleanToVisibilityConverter}}"                    
                    Background="#AA000000">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="Visibility" Value="Visible">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Duration="0:0:0.15" From="0" To="1" Storyboard.TargetProperty="Opacity"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Grid>
                    <Grid.Resources>
                        <Style TargetType="RadioButton" BasedOn="{StaticResource {x:Type RadioButton}}">
                            <Setter Property="Foreground" Value="{DynamicResource GlyphBrush}" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="SnapsToDevicePixels" Value="True" />
                            <Setter Property="Padding" Value="10,5,10,5" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="FontSize" Value="18" />
                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                            <Setter Property="Margin" Value="5" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type RadioButton}">
                                        <Border BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}"
                                                CornerRadius="{DynamicResource ControlCornerRadius}" Style="{DynamicResource HighlightBorder}">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                              Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="FontSize" Value="18" />
                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                            <Setter Property="Margin" Value="5" />
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="{DynamicResource MainMenuBackgroundBrush}"
                            Padding="10,70,0,20">
                        <DockPanel>
                            <RadioButton Content="{DynamicResource MenuAddGame}" Name="ButtonAddGame"
                                    DockPanel.Dock="Top" />
                            <RadioButton Content="{DynamicResource MenuReloadLibrary}" Command="{Binding UpdateGamesCommand}"
                                    DockPanel.Dock="Top" />
                            <RadioButton Content="{DynamicResource MenuTools}" Name="ButtonTools"
                                    DockPanel.Dock="Top" />
                            <RadioButton Content="{DynamicResource MenuOpenClient}" Name="ButtonClients"
                                    DockPanel.Dock="Top" />
                            <RadioButton Content="{DynamicResource Extensions}" Name="ButtonExtensions"
                                    DockPanel.Dock="Top" />
                            <RadioButton Content="{DynamicResource MenuPlayniteSettingsTitle}" Command="{Binding OpenSettingsCommand}"
                                    DockPanel.Dock="Top"/>
                            <RadioButton Content="{DynamicResource ExitAppLabel}" Command="{Binding ShutdownCommand}"
                                    DockPanel.Dock="Top" />
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="-10,0,0,0">
                                <Button Command="{x:Static pcmd:GeneralCommands.NavigateUrlCommand}"
                                        CommandParameter="https://discord.gg/hSFvmN6" Cursor="Hand">
                                    <Image Height="24" Source="/Images/discord.png" RenderOptions.BitmapScalingMode="Fant" />
                                </Button>
                                <Button Command="{x:Static pcmd:GeneralCommands.NavigateUrlCommand}"
                                        CommandParameter="https://twitter.com/AppPlaynite" Cursor="Hand">
                                    <Image Height="24" Source="/Images/twitter.png" RenderOptions.BitmapScalingMode="Fant" />
                                </Button>
                                <Button Command="{x:Static pcmd:GeneralCommands.NavigateUrlCommand}"
                                        CommandParameter="https://www.reddit.com/r/playnite/" Cursor="Hand">
                                    <Image Height="24" Source="/Images/reddit.png" RenderOptions.BitmapScalingMode="Fant" />
                                </Button>
                                <Button Command="{x:Static pcmd:GeneralCommands.NavigateUrlCommand}"
                                        CommandParameter="https://www.patreon.com/playnite" Cursor="Hand">
                                    <Image Height="24" Source="/Images/patreon.png" RenderOptions.BitmapScalingMode="Fant" />
                                </Button>
                            </StackPanel>
                            <RadioButton Content="{DynamicResource MenuIssues}" Command="{Binding ReportIssueCommand}"
                                    DockPanel.Dock="Bottom" />
                            <RadioButton Content="{DynamicResource MenuAbout}" Command="{Binding OpenAboutCommand}"
                                    DockPanel.Dock="Bottom" />
                            <Grid DockPanel.Dock="Top" />
                        </DockPanel>
                    </Border>

                    <Border Grid.Column="1" Padding="0,70,0,20"
                            Visibility="{Binding IsChecked, ElementName=ButtonAddGame, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Background="{DynamicResource MainMenuBackgroundBrush}">
                        <StackPanel>
                            <Button Content="{DynamicResource MenuAddGameManual}" Command="{Binding AddCustomGameCommand}"/>
                            <Button Content="{DynamicResource MenuAddGameInstalled}" Command="{Binding AddInstalledGamesCommand}"/>
                            <Button Content="{DynamicResource MenuAddGameEmulated}" Command="{Binding AddEmulatedGamesCommand}"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Padding="0,70,0,20"
                            Visibility="{Binding IsChecked, ElementName=ButtonTools, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Background="{DynamicResource MainMenuBackgroundBrush}">
                        <StackPanel>
                            <Button Content="{DynamicResource MenuPlatformEmulatorSettingsTitle}" Command="{Binding OpenPlatformsCommand}"/>
                            <Button Content="{DynamicResource MenuDownloadMetadata}" Command="{Binding DownloadMetadataCommand}"/>
                            <Button Content="{DynamicResource ReloadScripts}" Command="{Binding ReloadScriptsCommand}"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Padding="0,70,0,20"
                            Visibility="{Binding IsChecked, ElementName=ButtonClients, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Background="{DynamicResource MainMenuBackgroundBrush}">
                        <ItemsControl ItemsSource="{Binding ThirdPartyTools}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Name}"
                                            Command="{Binding Source={StaticResource Proxy}, Path=Data.ThridPartyToolOpenCommand}"
                                            CommandParameter="{Binding}">
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>

                    <Border Grid.Column="3" Padding="0,70,0,20"
                            Visibility="{Binding IsChecked, ElementName=ButtonExtensions, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Background="{DynamicResource MainMenuBackgroundBrush}">
                        <ItemsControl DataContext="{Binding Api, Source={x:Static pui:App.Current}}"
                                      ItemsSource="{Binding ExportedFunctions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Name}"
                                            Command="{Binding Source={StaticResource Proxy}, Path=Data.InvokeExtensionFunctionCommand}"
                                            CommandParameter="{Binding}">
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>

                    <Button Grid.Column="4" Command="{Binding CloseMainMenuCommand}"
                            Background="Transparent"/>

                    <Button Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Marlett"
                            FontSize="18" Content="r" Margin="15,20,0,0" Command="{Binding CloseMainMenuCommand}" >
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </ControlTemplate>
    
    <Style TargetType="{x:Type pc:MainView}">
        <Setter Property="Margin" Value="0,-25,0,0" />
        <Setter Property="Template" Value="{StaticResource MainView}"/>
    </Style>
</ResourceDictionary>