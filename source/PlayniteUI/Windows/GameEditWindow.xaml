<controls:WindowBase x:Class="PlayniteUI.GameEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pui="clr-namespace:PlayniteUI"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:playnite="clr-namespace:Playnite;assembly=Playnite"
        xmlns:pm="clr-namespace:Playnite.SDK.Models;assembly=PlayniteSDK"
        xmlns:controls="clr-namespace:PlayniteUI.Controls"
        mc:Ignorable="d"                     
        d:DesignStyle="{StaticResource WindowDesignStyle}"
        Style="{DynamicResource StandardWindowStyle}"
        Title="{DynamicResource LOCGameEditWindowTitle}"
        Height="720" Width="850"
        WindowStartupLocation="CenterOwner"
        x:Name="mainWindow" Loaded="Window_Loaded"
        AutomationProperties.AutomationId="WindowGameEdit">

    <controls:WindowBase.Resources>
        <pui:ListToStringConverter x:Key="ListToStringConverter" />
        <pui:CustomImageStringToImageConverter x:Key="CustomImageStringToImageConverter" />
        <pui:NullableDateToStringConverter x:Key="NullableDateToStringConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <pui:InvertableBooleanToVisibilityConverter x:Key="InvertableBooleanToVisibilityConverter" />
        <pui:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <pui:NegateConverter x:Key="NegateConverter" />
        <pui:ValueConverterGroup x:Key="EnumCompVisibilityConverterInverted">
            <pui:EnumConverter/>
            <pui:NegateConverter/>
            <BooleanToVisibilityConverter/>
        </pui:ValueConverterGroup>
    </controls:WindowBase.Resources>

    <Grid Margin="0,5,0,0" IsEnabled="{Binding ProgressVisible, Converter={StaticResource NegateConverter}}">
        <Grid.Resources>
            <pui:BindingProxy x:Key="Proxy" Data="{Binding}" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Name="TabControlMain" DockPanel.Dock="Top" Grid.Column="0" Grid.Row="0">
            <TabItem Name="TabGeneral">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text=" ! " Foreground="Orange" ToolTip="{DynamicResource LOCGameEditChangeNotif}"
                                    Visibility="{Binding ShowGeneralChangeNotif,Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="{DynamicResource LOCGeneralLabel}"
                                    Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=TextBlock}}" />
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer>
                <Grid Grid.Column="0" Grid.Row="0" Margin="10">
                    <Grid.Resources>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}" >
                            <Setter Property="Margin" Value="3" />
                        </Style>
                        <Style TargetType="controls:NumericBox" BasedOn="{StaticResource {x:Type controls:NumericBox}}" >
                            <Setter Property="Margin" Value="3" />
                        </Style>
                        <Style TargetType="controls:NullableIntBox" BasedOn="{StaticResource {x:Type controls:NullableIntBox}}" >
                            <Setter Property="Margin" Value="3" />
                        </Style>
                        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}" >
                            <Setter Property="Margin" Value="3" />
                        </Style>
                        <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}" >
                            <Setter Property="Margin" Value="0,0,0,0" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}" >
                            <Setter Property="Margin" Value="8,0,10,0" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                        <Style TargetType="DatePicker" BasedOn="{StaticResource {x:Type DatePicker}}" >
                            <Setter Property="Margin" Value="3" />
                        </Style>
                        <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}"
                                            x:Key="CompletionStatusEnumValues">
                            <ObjectDataProvider.MethodParameters>
                                <x:Type TypeName="pm:CompletionStatus" />
                            </ObjectDataProvider.MethodParameters>
                        </ObjectDataProvider>
                        <ComboBox x:Key="ComboCompletionStatusOptions" x:Shared="False"
                                  SelectedValue="{Binding CompletionStatus}"
                                  ItemsSource="{Binding Source={StaticResource CompletionStatusEnumValues}}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={pui:CompletionStatusToStringConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ID -->
                    <TextBlock Text="Id" Grid.Column="0" Grid.Row="0"
                                Visibility="{Binding Source={x:Static playnite:PlayniteEnvironment.IsDebugBuild}, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <TextBox Grid.Column="2" Grid.Row="0" IsReadOnly="True" Text="{Binding EditingGame.ProviderId, Mode=OneTime}"
                             VerticalAlignment="Center"
                                Visibility="{Binding Source={x:Static playnite:PlayniteEnvironment.IsDebugBuild}, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <!-- Name -->
                    <TextBlock Grid.Column="0" Grid.Row="1" Text="{DynamicResource LOCNameLabel}"/>
                    <CheckBox Grid.Column="1" Grid.Row="1" Name="CheckName"
                                Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                IsChecked="{Binding UseNameChanges}"/>
                    <TextBox Grid.Column="2" Grid.Row="1" Name="TextName"
                                Text="{Binding EditingGame.Name, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Sorting Name -->
                    <TextBlock Grid.Column="0" Grid.Row="2" Text="{DynamicResource LOCGameSortingNameTitle}"/>
                    <CheckBox Grid.Column="1" Grid.Row="2" Name="CheckSortingName"
                                Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                IsChecked="{Binding UseSortingNameChanges}"/>
                    <TextBox Grid.Column="2" Grid.Row="2" Name="TextSortingName"
                                Text="{Binding EditingGame.SortingName, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Platform -->
                    <TextBlock Grid.Column="0" Grid.Row="3" Text="{DynamicResource LOCGamePlatformTitle}"/>
                    <CheckBox Grid.Column="1" Grid.Row="3" Name="CheckPlatform"
                                Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                IsChecked="{Binding UsePlatformChanges}"/>
                    <ComboBox Grid.Column="2" Grid.Row="3" Name="ComboPlatforms"
                                ItemsSource="{Binding Platforms}"
                                SelectedValuePath="Id" SelectedValue="{Binding EditingGame.PlatformId, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Genres -->
                    <TextBlock Grid.Column="0" Grid.Row="4" Text="{DynamicResource LOCGameGenresTitle}" />
                    <CheckBox Grid.Column="1" Grid.Row="4" Name="CheckGenres"
                                Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                IsChecked="{Binding UseGenresChanges}"/>
                    <TextBox Grid.Column="2" Grid.Row="4" Name="TextGenres"
                                Text="{Binding EditingGame.Genres, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ListToStringConverter}, Delay=1000}"/>

                    <!-- Release Date -->
                    <TextBlock Grid.Column="0" Grid.Row="5" Text="{DynamicResource LOCGameReleaseDateTitle}"/>
                    <CheckBox Grid.Column="1" Grid.Row="5" Name="CheckReleaseDate"
                                Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                IsChecked="{Binding UseReleaseDateChanges}"/>
                    <DatePicker Grid.Column="2" Grid.Row="5"
                                SelectedDate="{Binding EditingGame.ReleaseDate}"/>

                    <!-- Developers -->
                    <TextBlock Grid.Column="0" Grid.Row="6" Text="{DynamicResource LOCGameDevelopersTitle}"/>
                    <CheckBox Grid.Column="1" Grid.Row="6" Name="CheckDeveloper"
                                Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                IsChecked="{Binding UseDeveloperChanges}"/>
                    <TextBox Grid.Column="2" Grid.Row="6" Name="TextDeveloper"
                                Text="{Binding EditingGame.Developers, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ListToStringConverter}, Delay=1000}"/>

                    <!-- Publishers -->
                    <TextBlock Grid.Column="0" Grid.Row="7" Text="{DynamicResource LOCGamePublishersTitle}" />
                    <CheckBox Grid.Column="1" Grid.Row="7" Name="CheckPublisher"
                                Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                IsChecked="{Binding UsePublisherChanges}"/>
                    <TextBox Grid.Column="2" Grid.Row="7" Name="TextPublisher"
                                Text="{Binding EditingGame.Publishers, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ListToStringConverter}, Delay=1000}"/>

                    <!-- Categories -->
                    <TextBlock Grid.Column="0" Grid.Row="8" Text="{DynamicResource LOCGameCategoriesTitle}" />
                    <CheckBox Grid.Column="1" Grid.Row="8" Name="CheckCategories"
                                Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                IsChecked="{Binding UseCategoryChanges}"/>
                    <DockPanel Grid.Column="2" Grid.Row="8">
                        <Button Name="ButtonPickCat" Content="..."  DockPanel.Dock="Right" Margin="2"
                                Height="{Binding ActualHeight, ElementName=TextCategories}"
                                Command="{Binding SelectCategoryCommand}"/>
                        <TextBox Name="TextCategories" DockPanel.Dock="Left"
                                    Text="{Binding EditingGame.Categories, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ListToStringConverter}, Delay=1000}"/>
                    </DockPanel>

                    <!-- Tags -->
                    <TextBlock Grid.Column="0" Grid.Row="9" Text="{DynamicResource LOCGameTagsTitle}" />
                    <CheckBox Grid.Column="1" Grid.Row="9" Name="CheckTag"
                                Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                IsChecked="{Binding UseTagChanges}"/>
                    <TextBox Grid.Column="2" Grid.Row="9" Name="TextTag"
                                Text="{Binding EditingGame.Tags, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ListToStringConverter}, Delay=1000}"/>

                    <!-- Description -->
                    <TextBlock Grid.Column="0" Grid.Row="10" Text="{DynamicResource LOCGameDescriptionTitle}" />
                    <CheckBox Grid.Column="1" Grid.Row="10" Name="CheckDescription" 
                                Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                IsChecked="{Binding UseDescriptionChanges}"/>
                    <TextBox Grid.Column="2" Grid.Row="10" Grid.RowSpan="13"
                             Height="260" VerticalAlignment="Top"
                             TextWrapping="Wrap" AcceptsReturn="True" Name="TextDescription"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             Text="{Binding EditingGame.Description, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="{DynamicResource LOCDescriptionHTMLSupportTooltip}"
                             ToolTipService.Placement="Top" ToolTipService.InitialShowDelay="0"/>                    
                    
                    <!-- Series -->
                    <TextBlock Grid.Column="3" Grid.Row="1" Text="{DynamicResource LOCSeriesLabel}"/>
                    <CheckBox Grid.Column="4" Grid.Row="1"
                              Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                              IsChecked="{Binding UseSeriesChanges}"/>
                    <TextBox Grid.Column="5" Grid.Row="1"
                             Text="{Binding EditingGame.Series, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <!-- Version -->
                    <TextBlock Grid.Column="3" Grid.Row="2" Text="{DynamicResource LOCVersionLabel}"/>
                    <CheckBox Grid.Column="4" Grid.Row="2"
                              Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                              IsChecked="{Binding UseVersionChanges}"/>
                    <TextBox Grid.Column="5" Grid.Row="2"
                             Text="{Binding EditingGame.Version, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <!-- AgeRating -->
                    <TextBlock Grid.Column="3" Grid.Row="3" Text="{DynamicResource LOCAgeRatingLabel}"/>
                    <CheckBox Grid.Column="4" Grid.Row="3"
                              Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                              IsChecked="{Binding UseAgeRatingChanges}"/>
                    <TextBox Grid.Column="5" Grid.Row="3"
                             Text="{Binding EditingGame.AgeRating, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <!-- Region -->
                    <TextBlock Grid.Column="3" Grid.Row="4" Text="{DynamicResource LOCRegionLabel}"/>
                    <CheckBox Grid.Column="4" Grid.Row="4"
                              Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                              IsChecked="{Binding UseRegionChanges}"/>
                    <TextBox Grid.Column="5" Grid.Row="4"
                             Text="{Binding EditingGame.Region, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <!-- Source -->
                    <TextBlock Grid.Column="3" Grid.Row="5" Text="{DynamicResource LOCSourceLabel}"/>
                    <CheckBox Grid.Column="4" Grid.Row="5"
                              Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                              IsChecked="{Binding UseSourceChanges}"/>
                    <TextBox Grid.Column="5" Grid.Row="5"
                             Text="{Binding EditingGame.Source, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- UserScore -->
                    <TextBlock Grid.Column="3" Grid.Row="6" Text="{DynamicResource LOCUserScore}"/>
                    <CheckBox Grid.Column="4" Grid.Row="6"
                              Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                              IsChecked="{Binding UseUserScoreChanges}"/>
                    <controls:NullableIntBox Grid.Column="5" Grid.Row="6" Width="50" HorizontalAlignment="Left"
                                             MinValue="0" MaxValue="100"
                                             Value="{Binding EditingGame.UserScore}"
                                             ToolTip="{DynamicResource LOCDescriptionScoreValues}"
                                             ToolTipService.Placement="Top" ToolTipService.InitialShowDelay="0" />

                    <!-- CriticScore -->
                    <TextBlock Grid.Column="3" Grid.Row="7" Text="{DynamicResource LOCCriticScore}"/>
                    <CheckBox Grid.Column="4" Grid.Row="7"
                              Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                              IsChecked="{Binding UseCriticScoreChanges}"/>
                    <controls:NullableIntBox Grid.Column="5" Grid.Row="7" Width="50" HorizontalAlignment="Left"
                                             MinValue="0" MaxValue="100"
                                             Value="{Binding EditingGame.CriticScore}"
                                             ToolTip="{DynamicResource LOCDescriptionScoreValues}"
                                             ToolTipService.Placement="Top" ToolTipService.InitialShowDelay="0" />          

                    <!-- CommunityScore -->
                    <TextBlock Grid.Column="3" Grid.Row="8" Text="{DynamicResource LOCCommunityScore}"/>
                    <CheckBox Grid.Column="4" Grid.Row="8"
                              Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                              IsChecked="{Binding UseCommunityScoreChanges}"/>
                    <controls:NullableIntBox Grid.Column="5" Grid.Row="8" Width="50" HorizontalAlignment="Left"
                                             MinValue="0" MaxValue="100"
                                             Value="{Binding EditingGame.CommunityScore}"
                                             ToolTip="{DynamicResource LOCDescriptionScoreValues}"
                                             ToolTipService.Placement="Top" ToolTipService.InitialShowDelay="0" />

                    <!-- Last Played -->
                    <TextBlock Grid.Column="3" Grid.Row="10" Text="{DynamicResource LOCLastPlayedLabel}"/>
                    <CheckBox Grid.Column="4" Grid.Row="10"
                                Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                IsChecked="{Binding UseLastActivityChanges}"/>
                    <DatePicker Grid.Column="5" Grid.Row="10"
                                SelectedDate="{Binding EditingGame.LastActivity}"/>

                    <!-- PlayTime -->
                    <TextBlock Grid.Column="3" Grid.Row="11" Text="{DynamicResource LOCTimePlayed}"/>
                    <CheckBox Grid.Column="4" Grid.Row="11"
                              Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                              IsChecked="{Binding UsePlaytimeChanges}"/>
                    <DockPanel Grid.Column="5" Grid.Row="11">
                        <TextBlock Text="{Binding EditingGame.Playtime, Converter={pui:LongToTimePlayedConverter}}"
                                   DockPanel.Dock="Right" />
                        <controls:NumericBox LongValue="{Binding EditingGame.Playtime}"
                                             MaxLongValue="9999999999"
                                             ToolTip="{DynamicResource LOCDescriptionPlaytimeSeconds}"
                                             ToolTipService.Placement="Top" ToolTipService.InitialShowDelay="0"
                                             DockPanel.Dock="Left" />
                    </DockPanel>

                    <!-- PlayCount -->
                    <TextBlock Grid.Column="3" Grid.Row="12" Text="{DynamicResource LOCPlayCountLabel}"/>
                    <CheckBox Grid.Column="4" Grid.Row="12"
                              Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                              IsChecked="{Binding UsePlayCountChanges}"/>
                    <controls:NumericBox Grid.Column="5" Grid.Row="12"
                                         LongValue="{Binding EditingGame.PlayCount}" />

                    <!-- CompletionStatus -->
                    <TextBlock Grid.Column="3" Grid.Row="13" Text="{DynamicResource LOCCompletionStatus}"/>
                    <CheckBox Grid.Column="4" Grid.Row="13"
                                Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                IsChecked="{Binding UseCompletionStatusChanges}"/>
                    <ContentControl Grid.Column="5" Grid.Row="13"
                                    DataContext="{Binding EditingGame}"
                                    Content="{StaticResource ComboCompletionStatusOptions}" />

                    <Grid Height="20" Grid.Column="3" Grid.Row="14" />

                    <!-- Hidden -->
                    <TextBlock Grid.Column="3" Grid.Row="15" Text="{DynamicResource LOCGameHiddenTitle}" />
                    <CheckBox Grid.Column="4" Grid.Row="15"
                              Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                              IsChecked="{Binding UseHiddenChanges}"/>
                    <CheckBox Grid.Column="5" Grid.Row="15" Margin="3"
                              IsChecked="{Binding EditingGame.Hidden}"/>

                    <!-- Favorite -->
                    <TextBlock Grid.Column="3" Grid.Row="16" Text="{DynamicResource LOCGameFavoriteTitle}" />
                    <CheckBox Grid.Column="4" Grid.Row="16"
                              Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                              IsChecked="{Binding UseFavoriteChanges}"/>
                    <CheckBox Grid.Column="5" Grid.Row="16" Margin="3"
                              IsChecked="{Binding EditingGame.Favorite}" />

                    <Grid Height="20" Grid.Column="3" Grid.Row="17" />

                    <!-- Added -->
                    <TextBlock Grid.Column="3" Grid.Row="18" Text="{DynamicResource LOCAddedLabel}"/>
                    <CheckBox Grid.Column="4" Grid.Row="18"
                                Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                                IsChecked="{Binding UseAddedChanges}"/>
                    <DatePicker Grid.Column="5" Grid.Row="18"
                                SelectedDate="{Binding EditingGame.Added}"/>

                    <!-- Modified -->
                    <TextBlock Grid.Column="3" Grid.Row="19" Text="{DynamicResource LOCModifiedLabel}" />
                    <TextBlock Grid.Column="5" Grid.Row="19" Margin="3,6,3,6"
                             Text="{Binding EditingGame.Modified, Converter={StaticResource NullableDateToStringConverter}}"/>
                </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text=" ! " Foreground="Orange" ToolTip="{DynamicResource LOCGameEditChangeNotif}"
                                   Visibility="{Binding ShowMediaChangeNotif,Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="{DynamicResource LOCMediaLabel}"
                                   Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=TextBlock}}" />
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Column="0" Grid.Row="0" Header="{DynamicResource LOCGameIconTitle}">
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="CheckIcon" VerticalAlignment="Center"
                                                  Visibility="{Binding Data.ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}, Source={StaticResource Proxy}}"
                                                  IsChecked="{Binding Data.UseIconChanges, Source={StaticResource Proxy}}"/>
                                    <TextBlock Text="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>
                        <DockPanel LastChildFill="True">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5" DockPanel.Dock="Top">
                                <Button Name="ButtonSelectIcon" Content="{DynamicResource LOCSelectIconTitle}"
                                        Command="{Binding SelectIconCommand}" />
                                <Button Name="ButtonUseExeIcon" Content="{DynamicResource LOCUseExeIcon}" 
                                        Command="{Binding UseExeIconCommand}"
                                        Visibility="{Binding Game, Converter={StaticResource NullToVisibilityConverter}}"
                                        Margin="5,0,0,0"/>
                                <Button Content="{DynamicResource LOCRemoveLabel}" Margin="5,0,0,0"
                                        Command="{Binding RemoveIconCommand}" />
                            </StackPanel>
                            <Image Source="{Binding EditingGame.Icon, Mode=OneWay, Converter={StaticResource CustomImageStringToImageConverter}}"
                                       Stretch="Uniform" StretchDirection="DownOnly" RenderOptions.BitmapScalingMode="Fant" Name="ImageIcon"
                                       DockPanel.Dock="Top" MaxHeight="64"
                                       AutomationProperties.HelpText="{Binding EditingGame.Icon, TargetNullValue=''}"/>
                        </DockPanel>
                    </GroupBox>
                    <GroupBox Grid.Column="0" Grid.Row="1" Header="{DynamicResource LOCGameCoverImageTitle}" Margin="0,5,0,0">
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="CheckImage" VerticalAlignment="Center"
                                                  Visibility="{Binding Data.ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}, Source={StaticResource Proxy}}"
                                                  IsChecked="{Binding Data.UseImageChanges, Source={StaticResource Proxy}}"/>
                                    <TextBlock Text="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>
                        <DockPanel LastChildFill="True">
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
                                <Button Name="ButtonSelectImage" Content="{DynamicResource LOCSelectCoverTitle}" 
                                        HorizontalAlignment="Left"
                                        Command="{Binding SelectCoverCommand}"/>
                                <Button Content="{DynamicResource LOCRemoveLabel}" Margin="5,0,0,0"
                                        Command="{Binding RemoveImageCommand}" />
                            </StackPanel>
                            <Image Source="{Binding EditingGame.Image, Mode=OneWay, Converter={StaticResource CustomImageStringToImageConverter}}"
                                       Stretch="Uniform" StretchDirection="Both" RenderOptions.BitmapScalingMode="Fant" Name="ImageImage"
                                       DockPanel.Dock="Top"
                                       AutomationProperties.HelpText="{Binding EditingGame.Image, TargetNullValue=''}"/>
                        </DockPanel>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
                              Header="{DynamicResource LOCGameBackgroundTitle}" Margin="5,0,0,0">
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="CheckImage" VerticalAlignment="Center"
                                              Visibility="{Binding Data.ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}, Source={StaticResource Proxy}}"
                                              IsChecked="{Binding Data.UseBackgroundChanges, Source={StaticResource Proxy}}"/>
                                    <TextBlock Text="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>
                        <DockPanel DockPanel.Dock="Top">
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
                                <Button Content="{DynamicResource LOCSelectFileTitle}" HorizontalAlignment="Left"
                                        Command="{Binding SelectBackgroundCommand}"/>
                                <Button Content="{DynamicResource LOCSelectUrlTitle}" Margin="5,0,0,0" HorizontalAlignment="Left"
                                        Command="{Binding SetBackgroundUrlCommand}"/>
                                <Button Content="{DynamicResource LOCRemoveLabel}" Margin="5,0,0,0"
                                        Command="{Binding RemoveBackgroundCommand}" />
                            </StackPanel>
                            <DockPanel DockPanel.Dock="Top" Margin="5,5,0,5"
                                       Visibility="{Binding ShowBackgroundUrl, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="{DynamicResource LOCImageURL}" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                <TextBox IsReadOnly="True" DockPanel.Dock="Left" Margin="5,0,0,0"
                                         Text="{Binding EditingGame.BackgroundImage}" />
                            </DockPanel>
                            <Image Source="{Binding EditingGame.BackgroundImage, Mode=OneWay, Converter={StaticResource CustomImageStringToImageConverter}}"
                                   Stretch="Uniform" StretchDirection="Both" RenderOptions.BitmapScalingMode="Fant"
                                   DockPanel.Dock="Top"
                                   AutomationProperties.HelpText="{Binding EditingGame.Image, TargetNullValue=''}"/>
                        </DockPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <TabItem Name="TabLinks"
                     Visibility="{Binding ShowLinks, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text=" ! " Foreground="Orange" ToolTip="{DynamicResource LOCGameEditChangeNotif}"
                                   Visibility="{Binding ShowLinksChangeNotif,Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="{DynamicResource LOCLinksLabel}"
                                   Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=TextBlock}}" />
                    </StackPanel>
                </TabItem.Header>
                <DockPanel>
                    <Button Name="ButtonAddLink" Content="{DynamicResource LOCAddLinkButton}" HorizontalAlignment="Left" Margin="10,10,0,0"
                            Command="{Binding AddLinkCommand}" DockPanel.Dock="Top"/>
                    <CheckBox Name="CheckLinks" Content="{DynamicResource LOCSaveChanges}" Margin="10,5,5,5" DockPanel.Dock="Top"
                              Visibility="{Binding ShowCheckBoxes, Converter={StaticResource BooleanToVisibilityConverter}}"
                              IsChecked="{Binding UseLinksChanges}" />
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10" DockPanel.Dock="Top">
                        <StackPanel>
                            <ItemsControl Name="ItemsLinks" Grid.IsSharedSizeScope="True"
                                          ItemsSource="{Binding EditingGame.Links}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="-5,0,-5,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" SharedSizeGroup="A" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <TextBox Text="{Binding Name}" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Margin="5" />
                                            <TextBox Text="{Binding Url}" Grid.Column="1" Grid.Row="0" Margin="5" />
                                            <Button Name="ButtonRemoveLink" Content="{DynamicResource LOCRemoveLabel}" Grid.Column="2" Grid.Row="1"  Margin="5"
                                                    Command="{Binding Data.RemoveLinkCommand,Source={StaticResource Proxy}}"
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>                
            </TabItem>

            <TabItem Name="TabInstallation"
                     Visibility="{Binding ShowInstallation, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text=" ! " Foreground="Orange" ToolTip="{DynamicResource LOCGameEditChangeNotif}"
                                   Visibility="{Binding ShowInstallChangeNotif,Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="{DynamicResource LOCInstallationLabel}"
                                   Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=TextBlock}}" />
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{DynamicResource LOCGameInstallDirTitle}" Grid.Column="0" Margin="5" VerticalAlignment="Center" />
                    <TextBox Grid.Column="1" Margin="5" Name="TextInstallDir"
                             Text="{Binding EditingGame.InstallDirectory, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Content="..." Grid.Column="2" Margin="5" Name="ButtonBrowseInstallDir"
                            Command="{Binding SelectInstallDirCommand}"/>
                    <TextBlock Text="{DynamicResource LOCGameROMTitle}" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center" />
                    <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Name="TextIso"
                             Text="{Binding EditingGame.IsoPath, UpdateSourceTrigger=PropertyChanged}"  />
                    <Button Content="..." Grid.Row="1" Grid.Column="2" Margin="5" Name="ButtonBrowseIso"
                            Command="{Binding SelectGameImageCommand}"/>

                    <TextBlock Text="{DynamicResource LOCGameIsInstalledTitle}"
                               VerticalAlignment="Center"
                               Grid.Column="0" Grid.Row="2" Margin="5,10,5,5" />
                    <CheckBox Grid.Row="2" Grid.Column="1" Margin="5,10,5,5"
                              IsChecked="{Binding EditingGame.State.Installed}"/>
                </Grid>
            </TabItem>

            <TabItem Header="{DynamicResource LOCActionsLabel}" Name="TabActions"
                     Visibility="{Binding ShowActions, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <GroupBox Header="{DynamicResource LOCPlayAction}" Margin="10">
                            <StackPanel>
                                <Button Name="ButtonAddPlay" Content="{DynamicResource LOCAddPlayAction}" HorizontalAlignment="Left"
                                        Margin="0,5,0,5" Command="{Binding AddPlayActionCommand}">
                                    <Button.Style>                                        
                                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding EditingGame.PlayTask}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Name="ButtonRemovePlay" Content="{DynamicResource LOCRemovePlayAction}" HorizontalAlignment="Left"
                                        Margin="0,5,0,5" Command="{Binding DeletePlayActionCommand}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding EditingGame.PlayTask}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <pui:GameTaskView x:Name="TaskPlay" DataContext="{Binding EditingGame.PlayTask}"
                                                  Margin="5,0,5,5"
                                                  Visibility="{Binding Data.EditingGame.PlayTask, Converter={StaticResource NullToVisibilityConverter}, Source={StaticResource Proxy}}"
                                                  Emulators="{Binding Data.Emulators, Source={StaticResource Proxy}}"/>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="{DynamicResource LOCOtherActions}" Margin="10">
                            <StackPanel>
                                <ItemsControl Name="OtherTasksItems" ItemsSource="{Binding EditingGame.OtherTasks}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderThickness="1" BorderBrush="{StaticResource NormalBrush}" CornerRadius="3" Padding="5" Margin="0,0,0,10">
                                                <StackPanel Margin="10">
                                                    <pui:GameTaskView x:Name="TaskCustom" ShowNameRow="True"
                                                                      Emulators="{Binding Data.Emulators, Source={StaticResource Proxy}}"/>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                                        <Button Name="ButtonMoveUpAction" FontFamily="Marlett" Content="5" Margin="0,0,5,0"
                                                                Command="{Binding Data.MoveUpActionCommand, Source={StaticResource Proxy}}"
                                                                CommandParameter="{Binding }"/>
                                                        <Button Name="ButtonMoveDownAction" FontFamily="Marlett" Content="6" Margin="0,0,5,0"
                                                                Command="{Binding Data.MoveDownActionCommand, Source={StaticResource Proxy}}"
                                                                CommandParameter="{Binding }"/>
                                                        <Button Name="ButtonDeleteAction" Content="{DynamicResource LOCDeleteAction}"
                                                                Command="{Binding Data.DeleteActionCommand, Source={StaticResource Proxy}}"
                                                                CommandParameter="{Binding }"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <Button Name="ButtonAddAction" Content="{DynamicResource LOCAddAction}" HorizontalAlignment="Left" Margin="0,5,0,5"
                                        Command="{Binding AddActionCommand}"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <Border Grid.Column="0" Grid.Row="1" BorderThickness="0,1,0,0" BorderBrush="{StaticResource NormalBorderBrush}">
            <DockPanel LastChildFill="False" Margin="5">
                <Button Name="ButtonDownload" Content="{DynamicResource LOCMenuDownloadMetadata}" DockPanel.Dock="Left"
                        Style="{StaticResource BottomButton}"
                        pui:LeftClickContextMenuBehavior.Enabled="True">
                    <Button.ContextMenu>
                        <ContextMenu Placement="Top" Width="{Binding PlacementTarget.ActualWidth, RelativeSource={RelativeSource Self}}">
                            <MenuItem Header="IGDB" Command="{Binding DownloadIGDBMetadataCommand}"/>
                            <MenuItem Header="Wiki" Command="{Binding DownloadWikiMetadataCommand}"/>
                            <MenuItem Header="{DynamicResource LOCMetaSourceStore}" Command="{Binding DownloadStoreCommand}"
                                      Visibility="{Binding EditingGame.Provider, Converter={StaticResource EnumCompVisibilityConverterInverted}, ConverterParameter={x:Static pm:Provider.Custom}}"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
                <Button Name="ButtonCancel" Content="{DynamicResource LOCCancelLabel}" DockPanel.Dock="Right" IsCancel="True"
                        Style="{StaticResource BottomButton}"
                        Command="{Binding CancelCommand}"/>
                <Button Name="ButtonOK" Content="{DynamicResource LOCSaveLabel}" DockPanel.Dock="Right"
                        Style="{StaticResource BottomButton}"
                        Command="{Binding ConfirmCommand}"/>
            </DockPanel>
        </Border>

        <Grid Visibility="{Binding ProgressVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ProgressBar IsIndeterminate="True" Width="350" Height="40" />
            <TextBlock Text="{DynamicResource LOCDownloadingLabel}" HorizontalAlignment="Center" VerticalAlignment="Center"
                       Style="{DynamicResource BaseTextBlockStyle}"/>
        </Grid>
    </Grid>
</controls:WindowBase>
