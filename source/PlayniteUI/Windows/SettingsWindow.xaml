<controls:WindowBase x:Class="PlayniteUI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:pui="clr-namespace:PlayniteUI"
        xmlns:pcmd="clr-namespace:PlayniteUI.Commands"
        xmlns:pn="clr-namespace:Playnite;assembly=Playnite"
        xmlns:steam="clr-namespace:Playnite.Providers.Steam;assembly=Playnite"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:controls="clr-namespace:PlayniteUI.Controls"
        mc:Ignorable="d"
        d:DesignStyle="{StaticResource WindowDesignStyle}"
        Style="{DynamicResource StandardWindowStyle}"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        Title="{DynamicResource LOCSettingsWindowTitle}" Width="650" Height="550"                     
        AutomationProperties.AutomationId="WindowSettings">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction Command="{Binding DisposeCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    
    <controls:WindowBase.Resources>
        <pui:NegateConverter x:Key="NegateConverter" />
        <pui:EnumConverter x:Key="EnumConverter" />
        <sys:Double x:Key="IconSize">24</sys:Double>
        <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}" />
    </controls:WindowBase.Resources>

    <Border Margin="0,10,0,0" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource NormalBorderBrush}">
        <DockPanel KeyboardNavigation.TabNavigation="Local">
            <Border KeyboardNavigation.TabIndex="3" DockPanel.Dock="Bottom" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource NormalBorderBrush}">
                <DockPanel KeyboardNavigation.TabNavigation="Local" LastChildFill="False" Margin="5">
                    <Button TabIndex="2" Name="ButtonCancel" Content="{DynamicResource LOCCancelLabel}" DockPanel.Dock="Right"
                            Style="{StaticResource BottomButton}" IsCancel="True"
                            Command="{Binding CancelCommand}"/>
                    <Button TabIndex="1" Name="ButtonOK" Content="{DynamicResource LOCSaveLabel}" DockPanel.Dock="Right" 
                            Style="{StaticResource BottomButton}"
                            Command="{Binding ConfirmCommand}"/>
                </DockPanel>
            </Border>

            <TreeView TabIndex="1" DockPanel.Dock="Left" BorderThickness="0,0,1,0" BorderBrush="{DynamicResource NormalBorderBrush}"
                      Name="TreeSections" MinWidth="140">
                <TreeView.Resources>
                    <Style TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="Margin" Value="0,2,0,2" />
                        <Setter Property="Padding" Value="0,3,3,3" />
                    </Style>
                </TreeView.Resources>
                <TreeViewItem Header="{DynamicResource LOCSettingsGeneralLabel}" IsSelected="True">
                    <TreeViewItem.Tag>
                        <sys:Int32>0</sys:Int32>
                    </TreeViewItem.Tag>
                </TreeViewItem>
                <TreeViewItem Header="{DynamicResource LOCSettingsAppearanceLabel}">
                    <TreeViewItem.Tag>
                        <sys:Int32>1</sys:Int32>
                    </TreeViewItem.Tag>
                </TreeViewItem>
                <TreeViewItem Header="{DynamicResource LOCSettingsFullscreenLabel}">
                    <TreeViewItem.Tag>
                        <sys:Int32>8</sys:Int32>
                    </TreeViewItem.Tag>
                </TreeViewItem>
                <TreeViewItem Header="{DynamicResource LOCSettingsProvidersLabel}" IsExpanded="True" Focusable="False">
                    <TreeViewItem Header="Steam">
                        <TreeViewItem.Tag>
                            <sys:Int32>2</sys:Int32>
                        </TreeViewItem.Tag>
                    </TreeViewItem>
                    <TreeViewItem Header="GOG">
                        <TreeViewItem.Tag>
                            <sys:Int32>3</sys:Int32>
                        </TreeViewItem.Tag>
                    </TreeViewItem>
                    <TreeViewItem Header="Origin" >
                        <TreeViewItem.Tag>
                            <sys:Int32>4</sys:Int32>
                        </TreeViewItem.Tag>
                    </TreeViewItem>
                    <TreeViewItem Header="Battle.net">
                        <TreeViewItem.Tag>
                            <sys:Int32>5</sys:Int32>
                        </TreeViewItem.Tag>
                    </TreeViewItem>
                    <TreeViewItem Header="Uplay">
                        <TreeViewItem.Tag>
                            <sys:Int32>6</sys:Int32>
                        </TreeViewItem.Tag>
                    </TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Header="{DynamicResource LOCSettingsAdvancedLabel}">
                    <TreeViewItem.Tag>
                        <sys:Int32>7</sys:Int32>
                    </TreeViewItem.Tag>
                </TreeViewItem>
            </TreeView>

            <TabControl DockPanel.Dock="Bottom" TabStripPlacement="Top" OverridesDefaultStyle="True"
                        SelectedIndex="{Binding SelectedItem.Tag, ElementName=TreeSections}">
                <TabControl.Style>
                    <Style TargetType="TabControl">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabControl">
                                    <Grid>
                                        <TabPanel IsItemsHost="True" />
                                        <ContentPresenter ContentSource="SelectedContent" />
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Style>
                <TabItem Visibility="Collapsed">
                    <StackPanel KeyboardNavigation.TabIndex="2" KeyboardNavigation.TabNavigation="Local" Margin="20">
                        <DockPanel KeyboardNavigation.TabIndex="1" KeyboardNavigation.TabNavigation="Local" Margin="0,10,0,0">
                            <TextBlock Text="{DynamicResource LOCSettingsDBLocation}" Margin="5,0,10,0"
                                   DockPanel.Dock="Left" VerticalAlignment="Center"/>
                            <Button TabIndex="3" Name="ButtonBrowserDbFile" Content="{DynamicResource LOCChange}"
                                    DockPanel.Dock="Right" Padding="5,0,5,0"
                                    Command="{Binding SelectDbFileCommand}"/>
                            <TextBox TabIndex="2" Name="TextDatabase" Text="{Binding Settings.DatabasePath}"
                                     DockPanel.Dock="Left" Margin="0,0,5,0"
                                     IsReadOnly="True"/>
                        </DockPanel>

                        <DockPanel KeyboardNavigation.TabIndex="2" KeyboardNavigation.TabNavigation="Local" Margin="0,15,0,5" LastChildFill="False">
                            <TextBlock Text="{DynamicResource LOCLanguageSettingsLabel}" VerticalAlignment="Center" Margin="5,0,10,0" />
                            <ComboBox TabIndex="1" Name="ComboLanguage"
                                      SelectedValue="{Binding Settings.Language}"
                                      SelectedValuePath="Id" DisplayMemberPath="LocaleString"
                                      ItemsSource="{Binding AvailableLanguages}"/>
                            <TextBlock KeyboardNavigation.TabIndex="2" Margin="20,0,0,0" VerticalAlignment="Center">
                                <Hyperlink Command="{x:Static pcmd:GeneralCommands.NavigateUrlCommand}"
                                           CommandParameter="https://github.com/JosefNemec/Playnite/wiki/How-to:-Translations">
                                    <Run Text="{DynamicResource LOCSettingsCreateLocalization}" />
                                </Hyperlink>
                            </TextBlock>
                        </DockPanel>

                        <Grid KeyboardNavigation.TabIndex="3" KeyboardNavigation.TabNavigation="Local" Margin="0,20,0,0">
                            <Grid.Resources>
                                <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}"
                                                    x:Key="AfterLaunchOptionsEnumValues">
                                    <ObjectDataProvider.MethodParameters>
                                        <x:Type TypeName="pn:AfterLaunchOptions" />
                                    </ObjectDataProvider.MethodParameters>
                                </ObjectDataProvider>
                                <pui:AfterGameLaunchOptionToStringConverter x:Key="AfterGameLaunchOptionToStringConverter" />
                                <ComboBox TabIndex="1" x:Key="ComboAfterGameOptions" x:Shared="False"
                                          SelectedValue="{Binding AfterLaunch}"
                                          ItemsSource="{Binding Source={StaticResource AfterLaunchOptionsEnumValues}}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource AfterGameLaunchOptionToStringConverter}}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <CheckBox TabIndex="1" Name="CheckEnableTray" Content="{DynamicResource LOCSettingsShowTray}" Margin="5,0,0,0"
                                            IsChecked="{Binding Settings.EnableTray}"
                                      Grid.Column="0" Grid.Row="0"/>
                            <CheckBox Name="CheckMinimizeToTray" Content="{DynamicResource LOCSettingsMinimizeToTray}" Margin="20,10,5,5"
                                        IsChecked="{Binding Settings.MinimizeToTray}"
                                        IsEnabled="{Binding IsChecked, ElementName=CheckEnableTray}"
                                      Grid.Column="0" Grid.Row="1"/>
                            <CheckBox Name="CheckCloseToTray" Content="{DynamicResource LOCSettingsCloseToTray}" Margin="20,5,5,5"
                                        IsChecked="{Binding Settings.CloseToTray}"
                                        IsEnabled="{Binding IsChecked, ElementName=CheckEnableTray}"
                                      Grid.Column="0" Grid.Row="2"/>                

                            <StackPanel KeyboardNavigation.TabIndex="2"  Grid.Column="1" Grid.Row="0" Orientation="Horizontal"
                                        Margin="40,0,0,0">
                                <TextBlock Text="{DynamicResource LOCSettingsAfterGameStart}" Margin="0,0,5,0"
                                           VerticalAlignment="Center" />
                                <ContentControl IsTabStop="False" DataContext="{Binding Settings}"
                                                ToolTipService.InitialShowDelay="0"
                                                ToolTip="{DynamicResource LOCSettingsClosePlaytimeNotif}"
                                                Content="{StaticResource ComboAfterGameOptions}" />
                            </StackPanel>

                            <CheckBox Name="CheckUpdateLibStartup" Margin="5,25,5,5" Grid.Row="3" Grid.ColumnSpan="2"
                                      Content="{DynamicResource LOCSettingsUpdateLibStartup}" ToolTip="{DynamicResource LOCSettingsUpdateLibStartupTooltip}" 
                                      IsChecked="{Binding Settings.UpdateLibStartup}"/>

                            <CheckBox Name="CheckStartFullscreen" Margin="5,15,5,5" Grid.Row="4" Grid.ColumnSpan="2"
                                      Content="{DynamicResource LOCSettingsStartInFullscreen}"
                                      IsChecked="{Binding Settings.StartInFullscreen}"/>
                        </Grid>
                    </StackPanel>
                </TabItem>                
                
                <TabItem Visibility="Collapsed">
                    <StackPanel KeyboardNavigation.TabIndex="2" KeyboardNavigation.TabNavigation="Local" Margin="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="{DynamicResource LOCSettingsSkin}" VerticalAlignment="Center"
                                       Grid.Row="0" Grid.Column="0"/>
                            <ComboBox Margin="10,5,20,5" Name="ComboSkins"
                                        Grid.Row="0" Grid.Column="1"
                                        ItemsSource="{Binding AvailableSkins}"
                                        SelectedValue="{Binding Settings.Skin}"
                                        SelectionChanged="ComboSkins_SelectionChanged"
                                        SelectedValuePath="Name" DisplayMemberPath="Name" />

                            <TextBlock Text="{DynamicResource LOCSettingsSkinColor}" VerticalAlignment="Center"
                                       Grid.Row="0" Grid.Column="2" />
                            <ComboBox Margin="10,5,10,5" Name="CombSkinColor"
                                      Grid.Row="0" Grid.Column="3"
                                      SelectedValue="{Binding Settings.SkinColor}"
                                      SelectionChanged="CombSkinColor_SelectionChanged"
                                      ItemsSource="{Binding SelectedItem.Profiles, ElementName=ComboSkins}" />
                        </Grid>                        

                        <TextBlock Text="{DynamicResource LOCSettingsSkinChangeRestart}" FontStyle="Italic" Margin="0,15,0,15"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock >
                                <Hyperlink Command="{x:Static pcmd:GeneralCommands.NavigateUrlCommand}"
                                           CommandParameter="https://www.reddit.com/r/playnite/comments/7o2bd2/custom_themes_database/">
                                    <Run Text="{DynamicResource LOCSettingsGetThemes}" />
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Margin="20,0,0,0">
                                <Hyperlink Command="{x:Static pcmd:GeneralCommands.NavigateUrlCommand}"
                                           CommandParameter="https://github.com/JosefNemec/Playnite/wiki/How-to:-Themes">
                                    <Run Text="{DynamicResource LOCSettingsCreateThemes}" />
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                       
                        <CheckBox Content="{DynamicResource LOCSettingsAsyncImageLoading}" ToolTip="{DynamicResource LOCSettingsAsyncImageLoadingTooltip}"
                                  Margin="0,40,0,0"
                                  Name="CheckAsyncImages" IsChecked="{Binding Settings.AsyncImageLoading}"/>
                        <CheckBox Content="{DynamicResource LOCSettingsShowNameEmptyCover}" Margin="0,15,0,0"
                                  Name="CheckNameEmptyCover" IsChecked="{Binding Settings.ShowNameEmptyCover}"/>
                        <CheckBox Content="{DynamicResource LOCSettingsShowNamesUnderCover}" Margin="0,15,0,0"
                                  Name="CheckNameUnderCover" IsChecked="{Binding Settings.ShowNamesUnderCovers}"/>
                        <CheckBox Content="{DynamicResource LOCSettingsShowIconList}" Margin="0,15,0,0"
                                  Name="CheckShowIcons" IsChecked="{Binding Settings.ShowIconsOnList}"/>
                        <CheckBox Content="{DynamicResource LOCSettingsDisableAcceleration}" Margin="0,15,0,0" ToolTip="{DynamicResource LOCSettingsDisableAccelerationTooltip}"
                                  Name="CheckDisableAcceleration" IsChecked="{Binding Settings.DisableHwAcceleration}"/>
                    </StackPanel>
                </TabItem>
                <!--STEAM-->
                <TabItem Visibility="Collapsed">
                    <DockPanel KeyboardNavigation.TabIndex="2" KeyboardNavigation.TabNavigation="Local" Margin="20" LastChildFill="False">
                        <CheckBox IsChecked="{Binding Settings.SteamSettings.IntegrationEnabled}"
                                    Name="CheckSteamEnabled" Content="{DynamicResource LOCSettingsImportLabel}" HorizontalAlignment="Left"  VerticalAlignment="Center"
                                    DockPanel.Dock="Top"/>
                        <RadioButton Name="RadioInstalledSteam" Content="{DynamicResource LOCSettingsImportInstalledLabel}"
                                        IsChecked="{Binding Settings.SteamSettings.LibraryDownloadEnabled, Converter={StaticResource NegateConverter}}"
                                        IsEnabled="{Binding IsChecked, ElementName=CheckSteamEnabled}"
                                        DockPanel.Dock="Top" Margin="20,15,5,5"/>
                        <RadioButton Name="RadioLibrarySteam"
                                        IsChecked="{Binding Settings.SteamSettings.LibraryDownloadEnabled}"
                                        IsEnabled="{Binding IsChecked, ElementName=CheckSteamEnabled}"
                                        DockPanel.Dock="Top" Margin="20,5,5,0">
                            <RadioButton.Content>
                                <TextBlock Text="{DynamicResource LOCSettingsImportSteamLibraryLabel}"
                                       TextWrapping="Wrap" />
                            </RadioButton.Content>
                        </RadioButton>

                        <DockPanel KeyboardNavigation.TabNavigation="Local" DockPanel.Dock="Top" Margin="40,5,5,5" IsEnabled="{Binding IsChecked, ElementName=RadioLibrarySteam}">
                            <TextBlock Text="{DynamicResource LOCSettingsSteamLibrarySource}" DockPanel.Dock="Top" Margin="5"/>
                            <Grid KeyboardNavigation.TabIndex="1" KeyboardNavigation.TabNavigation="Local" DockPanel.Dock="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <RadioButton TabIndex="1" Content="{DynamicResource LOCNameLabel}" Name="RadioSteamLibName" GroupName="steamsource"
                                                IsChecked="{Binding Settings.SteamSettings.IdSource, Converter={StaticResource EnumConverter}, ConverterParameter={x:Static steam:SteamIdSource.Name}}"
                                                Grid.Column="0" Grid.Row="0" Margin="5"/>
                                <RadioButton TabIndex="4" Content="{DynamicResource LOCLocalUserLabel}" Name="RadioSteamLibAccount" GroupName="steamsource" 
                                                IsChecked="{Binding Settings.SteamSettings.IdSource, Converter={StaticResource EnumConverter}, ConverterParameter={x:Static steam:SteamIdSource.LocalUser}}"
                                                Grid.Column="0" Grid.Row="1" Margin="5"/>

                                <DockPanel KeyboardNavigation.TabIndex="3" KeyboardNavigation.TabNavigation="Local" Grid.Column="1" Grid.Row="0" Margin="5">
                                    <TextBlock KeyboardNavigation.TabIndex="1" DockPanel.Dock="Right" VerticalAlignment="Center">           
                                        <Hyperlink NavigateUri="https://github.com/JosefNemec/Playnite/wiki/How-to-get-Steam-account-name"
                                                   Command="{Binding NavigateUrlCommand}"
                                                   CommandParameter="{Binding NavigateUri, RelativeSource={RelativeSource Self}}">
                                            <Run Text="{DynamicResource LOCSettingsWhatsSteamName}" />
                                        </Hyperlink>
                                    </TextBlock>
                                    <TextBox TabIndex="2" Text="{Binding Settings.SteamSettings.AccountName}"
                                                IsEnabled="{Binding IsChecked, ElementName=RadioSteamLibName}"
                                                Name="TextSteamAccountName" DockPanel.Dock="Left" Margin="0,0,10,0" />
                                </DockPanel>
                                <ComboBox IsReadOnly="True" Name="ComboSteamAccount" DisplayMemberPath="AccountName"
                                            SelectedValuePath="Id" SelectedValue="{Binding Settings.SteamSettings.AccountId}"
                                            ItemsSource="{Binding SteamUsers}"
                                            IsEnabled="{Binding IsChecked, ElementName=RadioSteamLibAccount}"
                                            Grid.Column="1" Grid.Row="1" Margin="5" />
                            </Grid>
                            <CheckBox TabIndex="2" Content="{DynamicResource LOCPrivateAccount}" DockPanel.Dock="Top"
                                      IsChecked="{Binding Settings.SteamSettings.PrivateAccount}"
                                      Margin="5,5,5,5" Name="CheckSteamPrivate"
                                      ToolTip="{DynamicResource LOCSettingsApiKeyTooltip}"/>
                            <DockPanel KeyboardNavigation.TabIndex="3" KeyboardNavigation.TabNavigation="Local" DockPanel.Dock="Top" IsEnabled="{Binding IsChecked, ElementName=CheckSteamPrivate}"
                                       Margin="30,5,5,5">
                                <TextBlock Text="{DynamicResource LOCAPIKey}" DockPanel.Dock="Left"
                                           VerticalAlignment="Center"/>
                                <TextBlock KeyboardNavigation.TabIndex="2" DockPanel.Dock="Right" VerticalAlignment="Center">
                                    <Hyperlink NavigateUri="https://steamcommunity.com/dev/apikey"
                                               Command="{Binding NavigateUrlCommand}"
                                               CommandParameter="{Binding NavigateUri, RelativeSource={RelativeSource Self}}">
                                        <Run Text="{DynamicResource LOCSettingsApiKeyUrlText}" />
                                    </Hyperlink>
                                </TextBlock>
                                <TextBox TabIndex="1" Text="{Binding Settings.SteamSettings.APIKey}"
                                         DockPanel.Dock="Left" Margin="10,0,10,0"/>
                            </DockPanel>
                        </DockPanel>

                        <CheckBox Content="{DynamicResource LOCBackgroundImageScreenOption}"
                                  DockPanel.Dock="Top" Margin="5,15,0,5"
                                  ToolTip="{DynamicResource LOCBackgroundImageScreenOptionTooltip}" ToolTipService.InitialShowDelay="0"
                                  IsChecked="{Binding Settings.SteamSettings.PreferScreenshotForBackground}"/>

                        <TextBlock Text="{DynamicResource LOCSettingsSteamImportCategories}" DockPanel.Dock="Top" Margin="5,20,5,5" />
                        <StackPanel DockPanel.Dock="Top" Margin="20,10,5,5" Orientation="Horizontal">
                            <Button Content="{DynamicResource LOCImportLabel}" Name="ButtonImportSteamCategories"
                                    Command="{Binding ImportSteamCategoriesCommand}"/>
                            <TextBlock Text="{DynamicResource LOCSettingsSteamImportCatFrom}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            <ComboBox Name="ComboSteamCatImport" IsReadOnly="True" Margin="10,0,0,0"
                                        DisplayMemberPath="AccountName" SelectedValuePath="Id" SelectedIndex="0"
                                        ItemsSource="{Binding SteamUsers}" />
                        </StackPanel>
                    </DockPanel>
                </TabItem>
                <!--GOG-->
                <TabItem Visibility="Collapsed">
                    <DockPanel KeyboardNavigation.TabIndex="2" KeyboardNavigation.TabNavigation="Local" Margin="20" LastChildFill="False">
                        <CheckBox IsChecked="{Binding Settings.GOGSettings.RunViaGalaxy}"
                                  Name="CheckGogRunGalaxy" Content="{DynamicResource LOCSettingsGOGUseGalaxy}"
                                  ToolTip="{DynamicResource LOCSettingsGOGUseGalaxyTooltip}"
                                  DockPanel.Dock="Top" Margin="0,0,0,15"/>
                        <CheckBox IsChecked="{Binding Settings.GOGSettings.IntegrationEnabled}"
                                    Name="CheckGogEnabled" Content="{DynamicResource LOCSettingsImportLabel}" HorizontalAlignment="Left"  VerticalAlignment="Center"
                                    DockPanel.Dock="Top"/>
                        <RadioButton Name="RadioInstalledGOG" Content="{DynamicResource LOCSettingsImportInstalledLabel}"
                                        IsChecked="{Binding Settings.GOGSettings.LibraryDownloadEnabled, Converter={StaticResource NegateConverter}}"
                                        IsEnabled="{Binding IsChecked, ElementName=CheckGogEnabled}"
                                        DockPanel.Dock="Top" Margin="20,15,5,5"/>
                        <RadioButton Name="RadioLibraryGOG" Content="{DynamicResource LOCSettingsImportLibraryLabel}"
                                        IsChecked="{Binding Settings.GOGSettings.LibraryDownloadEnabled}"
                                        IsEnabled="{Binding IsChecked, ElementName=CheckGogEnabled}"
                                        DockPanel.Dock="Top" Margin="20,10,5,5"/>
                        <DockPanel DockPanel.Dock="Top" Margin="20,15,5,5" LastChildFill="False"
                                   IsEnabled="{Binding IsChecked, ElementName=CheckGogEnabled}">
                            <Button Content="{DynamicResource LOCAuthenticateLabel}" Name="ButtonGogAuth"
                                    Command="{Binding AuthGOGCommand}"/>
                            <TextBlock Text="{DynamicResource LOCSettingsLoginStatus}" VerticalAlignment="Center" Margin="10,0,10,0"/>
                            <TextBlock VerticalAlignment="Center">
                                <TextBlock.Text>
                                    <PriorityBinding>
                                        <Binding Path="GogLoginStatus" IsAsync="True" Mode="OneWay" />
                                        <Binding Source="{StaticResource LOCLoginChecking}" />
                                    </PriorityBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DockPanel>
                    </DockPanel>
                </TabItem>
                <!--ORIGIN-->
                <TabItem Visibility="Collapsed">
                    <DockPanel KeyboardNavigation.TabIndex="2" KeyboardNavigation.TabNavigation="Local" Margin="20" LastChildFill="False">
                        <CheckBox IsChecked="{Binding Settings.OriginSettings.IntegrationEnabled}"
                                    Name="CheckOriginEnabled" Content="{DynamicResource LOCSettingsImportLabel}" HorizontalAlignment="Left"  VerticalAlignment="Center"
                                    DockPanel.Dock="Top" />
                        <RadioButton Name="RadioInstalledOrigin" Content="{DynamicResource LOCSettingsImportInstalledLabel}"
                                        IsChecked="{Binding Settings.OriginSettings.LibraryDownloadEnabled, Converter={StaticResource NegateConverter}}"
                                        IsEnabled="{Binding IsChecked, ElementName=CheckOriginEnabled}"
                                        DockPanel.Dock="Top" Margin="20,15,5,5"/>
                        <RadioButton Name="RadioLibraryOrigin" Content="{DynamicResource LOCSettingsImportLibraryLabel}"
                                        IsChecked="{Binding Settings.OriginSettings.LibraryDownloadEnabled}"
                                        IsEnabled="{Binding IsChecked, ElementName=CheckOriginEnabled}"
                                        DockPanel.Dock="Top" Margin="20,10,5,5"/>
                        <DockPanel DockPanel.Dock="Top" Margin="20,15,5,5" LastChildFill="False"
                                   IsEnabled="{Binding IsChecked, ElementName=CheckOriginEnabled}">
                            <Button Content="{DynamicResource LOCAuthenticateLabel}" Name="ButtonOriginAuth"
                                    Command="{Binding AuthOriginCommand}"/>
                            <TextBlock Text="{DynamicResource LOCSettingsLoginStatus}" VerticalAlignment="Center" Margin="10,0,10,0"/>
                            <TextBlock VerticalAlignment="Center">
                                <TextBlock.Text>
                                    <PriorityBinding>
                                        <Binding Path="OriginLoginStatus" IsAsync="True" Mode="OneWay" />
                                        <Binding Source="{StaticResource LOCLoginChecking}" />
                                    </PriorityBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DockPanel>
                    </DockPanel>
                </TabItem>
                <!--BATTLENET-->
                <TabItem Visibility="Collapsed">
                    <DockPanel KeyboardNavigation.TabIndex="2" KeyboardNavigation.TabNavigation="Local" Margin="20" LastChildFill="False">
                        <CheckBox IsChecked="{Binding Settings.BattleNetSettings.IntegrationEnabled}"
                                    Name="CheckBattleNetEnabled" Content="{DynamicResource LOCSettingsImportLabel}" HorizontalAlignment="Left"  VerticalAlignment="Center"
                                    DockPanel.Dock="Top" />
                        <RadioButton Name="RadioInstalledBattleNet" Content="{DynamicResource LOCSettingsImportInstalledLabel}"
                                        IsChecked="{Binding Settings.BattleNetSettings.LibraryDownloadEnabled, Converter={StaticResource NegateConverter}}"
                                        IsEnabled="{Binding IsChecked, ElementName=CheckBattleNetEnabled}"
                                        DockPanel.Dock="Top" Margin="20,15,5,5"/>
                        <RadioButton Name="RadioLibraryBattleNet" Content="{DynamicResource LOCSettingsImportLibraryLabel}"
                                        IsChecked="{Binding Settings.BattleNetSettings.LibraryDownloadEnabled}"
                                        IsEnabled="{Binding IsChecked, ElementName=CheckBattleNetEnabled}"
                                        DockPanel.Dock="Top" Margin="20,10,5,5"/>
                        <DockPanel DockPanel.Dock="Top" Margin="20,15,5,5" LastChildFill="False"
                                   IsEnabled="{Binding IsChecked, ElementName=CheckBattleNetEnabled}">
                            <Button Content="{DynamicResource LOCAuthenticateLabel}" Name="ButtonBattleNetAuth"
                                    Command="{Binding AuthBattleNetCommand}"/>
                            <TextBlock Text="{DynamicResource LOCSettingsLoginStatus}" VerticalAlignment="Center" Margin="10,0,10,0"/>
                            <TextBlock VerticalAlignment="Center">
                                <TextBlock.Text>
                                    <PriorityBinding>
                                        <Binding Path="BattleNetLoginStatus" IsAsync="True" Mode="OneWay" />
                                        <Binding Source="{StaticResource LOCLoginChecking}" />
                                    </PriorityBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DockPanel>
                    </DockPanel>
                </TabItem>
                <!--UPLAY-->
                <TabItem Visibility="Collapsed">
                    <DockPanel KeyboardNavigation.TabIndex="2" KeyboardNavigation.TabNavigation="Local" Margin="20" LastChildFill="False">
                        <CheckBox IsChecked="{Binding Settings.UplaySettings.IntegrationEnabled}"
                                    Name="CheckUplayEnabled" Content="{DynamicResource LOCSettingsImportLabel}" HorizontalAlignment="Left"  VerticalAlignment="Center"
                                    DockPanel.Dock="Top"/>
                        <RadioButton Name="RadioInstalledUplay" Content="{DynamicResource LOCSettingsImportInstalledLabel}"
                                        IsChecked="{Binding Settings.UplaySettings.LibraryDownloadEnabled, Converter={StaticResource NegateConverter}}"
                                        IsEnabled="{Binding IsChecked, ElementName=CheckUplayEnabled}"
                                        DockPanel.Dock="Top" Margin="20,15,5,5"/>
                    </DockPanel>
                </TabItem>
                <TabItem Visibility="Collapsed">
                    <StackPanel KeyboardNavigation.TabIndex="2" KeyboardNavigation.TabNavigation="Local" Margin="20">
                        <Button Name="ButtonClearWebCace" Content="{DynamicResource LOCSettingsClearWebCache}" HorizontalAlignment="Left"
                                ToolTip="{DynamicResource LOCSettingsClearWebCacheTooltip}" ToolTipService.InitialShowDelay="0"
                                Command="{Binding ClearWebCacheCommand}"/>
                    </StackPanel>
                </TabItem>
                <TabItem Visibility="Collapsed">
                    <StackPanel KeyboardNavigation.TabIndex="2" KeyboardNavigation.TabNavigation="Local" Margin="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>

