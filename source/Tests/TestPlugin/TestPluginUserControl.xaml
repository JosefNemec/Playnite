<PluginUserControl x:Class="TestPlugin.TestPluginUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestPlugin"
             xmlns:sdk="clr-namespace:Playnite.SDK.Controls;assembly=Playnite.SDK"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <TextBlock Text="{Binding SettingsModel.Settings.Option2, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Foreground="LimeGreen" DockPanel.Dock="Top" />
        <Button Content="{Binding GameContext.Name}" Foreground="LimeGreen" DockPanel.Dock="Top" />
    </DockPanel>
</PluginUserControl>
